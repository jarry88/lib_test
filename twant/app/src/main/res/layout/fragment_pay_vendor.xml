                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="64dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A8A8A8"
                        android:textSize="14sp"
                        android:text="MOP$"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#A8A8A8"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="16dp"
                    android:text="0.00"
                    android:textSize="40sp"
                    android:textColor="@color/tw_red"
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/second_monny_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="64dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_second_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A8A8A8"
                        android:textSize="14sp"
                        android:text="CNY$"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#A8A8A8"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_second_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="20dp"
                    android:text="0.00"
                    android:textSize="18sp"
                    android:textColor="@color/tw_black"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@drawable/pay_vendor_container_bg"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/permission_dp_15"
                android:id="@+id/top_view"
                android:layout_alignParentTop="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:id="@+id/rv_pay_vendor_list"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/top_view"
                android:paddingBottom="@dimen/permission_dp_20"
                android:paddingTop="@dimen/permission_dp_15"
                />

            <ScrollView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">
                    <View
                        android:id="@+id/vw_first_separator"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/white"
                        />

                    <RelativeLayout
