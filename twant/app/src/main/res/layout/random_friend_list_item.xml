<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data >
        <variable
            name="vo"
            type="com.ftofs.twant.kotlin.vo.RandomMemberVo" />
    </data>
    <LinearLayout
        android:id="@+id/ll_message_item_container"
        android:background="@drawable/border_type_d"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="4dp"
                android:id="@+id/img_avatar"
                android:layout_width="48dp"
                android:layout_height="50dp"
                imageUrl="@{vo.avatar}"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/tw_light_grey_EDED"

                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_role_logo"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignBottom="@id/img_avatar"
                android:layout_alignEnd="@id/img_avatar"
                android:src="@drawable/icon_city_friend"
                visible="@{vo.isFriend}"

                />
            <TextView
                android:id="@+id/tv_unread_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="6sp"
                android:text=""
                android:background="@drawable/unread_count_bg"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <!-- 上面那行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/tw_dark_grey"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/tw_white"
                android:textSize="12sp"
                android:background="@drawable/text_blue_bg"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:id="@+id/tv_group_name"/>
            <!-- 下面那行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_last_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/tw_dark_grey"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <ImageView
                    android:id="@+id/icon_do_not_disturb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_do_not_disturb"
                    />
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_seller_logo"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/img_customer_logo"
            visible="@{vo.isSeller}"
            />
    </LinearLayout>

</layout>