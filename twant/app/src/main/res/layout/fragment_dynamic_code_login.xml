<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 地區區號 -->
    <LinearLayout
        android:id="@+id/ll_mobile_zone_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <include layout="@layout/mobile_zone_select" />
    </LinearLayout>

    <!-- 手機號 -->
    <RelativeLayout
        android:id="@+id/rl_mobile_container"
        android:layout_width="0dp"
        android:layout_height="75dp"

        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_mobile_zone_container"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/ll_container_mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/border_type_d"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_margin_left"

                android:src="@drawable/mobile"
                />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="@null"
                android:textColor="@color/tw_black"
                android:textColorHint="@color/tw_grey"
                android:hint="@string/input_mobile_hint"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text=""
                android:textSize="17sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_below="@id/ll_container_mobile"
            android:id="@+id/ll_container_mobile_error"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"

                android:src="@drawable/icon_red_error"
                />

            <TextView
                android:id="@+id/tv_mobile_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:background="@null"
                android:textColorHint="@color/tw_red"
                android:hint="@string/input_mobile_hint"
                android:singleLine="true"
                android:text=""
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <com.ftofs.twant.widget.CheckPhoneView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_mobile_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_mobile_zone_container"/>

    <!-- 驗證碼 -->
    <RelativeLayout
        android:id="@+id/rl_captcha_container"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_mobile_view"
        android:background="@drawable/border_type_d">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_centerVertical="true"
            android:src="@drawable/captcha"
            />

        <ImageView
            android:id="@+id/btn_refresh_captcha"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_refresh_captcha"
            android:layout_marginStart="41dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="41dp"
            android:background="@null"
            android:textColor="@color/tw_black"
            android:textColorHint="@color/tw_grey"
            android:hint="@string/input_captcha_hint"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textSize="17sp"
            />
    </RelativeLayout>

    <!-- 基因碼 -->
    <RelativeLayout
        android:id="@+id/rl_dynamic_code_container"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:paddingStart="@dimen/margin12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_captcha_container"
        android:background="@drawable/border_type_d">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/dynamic_code"
            />


        <TextView
            android:id="@+id/btn_get_sms_code"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="#F6F6F6"
            android:textColor="@color/tw_black"
            android:text="@string/get_sms_code"
            android:textSize="14sp"
            />


        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41dp"
            android:layout_toLeftOf="@id/btn_get_sms_code"
            android:background="@null"
            android:textColor="@color/tw_black"
            android:textColorHint="@color/tw_grey"
            android:hint="@string/input_sms_code_hint"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textSize="17sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_tos_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_dynamic_code_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_check"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_checked">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="@string/agree_and_login"
                android:textColor="#CBCBCB"
                android:textSize="11sp">
            </TextView>
            <TextView
                android:id="@+id/btn_view_tos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="《服務協議》"
                android:textSize="11sp"
                android:textColor="@color/tw_blue">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="與"
                android:textColor="#CBCBCB"
                android:textSize="11sp">
            </TextView>
            <TextView
                android:id="@+id/btn_view_private_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="《私隱條款》"
                android:textSize="11sp"
                android:textColor="@color/tw_blue">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/text_forget_password"
            android:textColor="@color/tw_blue"
            android:textSize="11sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_tos_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="265dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130.5dp"
            android:src="@drawable/btn_login_bg"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="91dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_third_party_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="第三方登入"
                android:textColor="@color/tw_medium_grey"
                />

            <View
                android:layout_width="83dp"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_third_party_login"
                android:layout_centerVertical="true"
                android:background="@color/tw_light_grey_EDED"
                />

            <View
                android:layout_width="83dp"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_third_party_login"
                android:layout_centerVertical="true"
                android:background="@color/tw_light_grey_EDED"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_wechat_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_wechat"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/btn_facebook_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_facebook_login"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
