<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5.5dp"
    android:layout_marginStart="4.5dp"
    android:layout_marginEnd="15dp">


    <!-- 主內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.5dp"
        android:layout_marginStart="10.5dp"
        android:orientation="vertical"
        android:background="@drawable/post_item_content_bg">
        <!-- 頭部區域 -->
        <LinearLayout
            android:id="@+id/ll_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/post_item_header_bg_normal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="@dimen/dp_4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_author_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:singleLine="true"
                        android:text="1小時前"
                        android:textColor="@color/tw_medium_grey"
                        android:textSize="11sp"
                        />


                </LinearLayout>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textColor="@color/tw_black"
                    android:textSize="16sp"
                    android:text="這套茶具很喜歡，不知道能不能找到~"
                    />

            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/post_cover_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:riv_corner_radius_bottom_left="5dp"
                app:riv_corner_radius_bottom_right="5dp"
                android:src="@drawable/del"
                />
            <TextView
                android:id="@+id/tv_post_summary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                android:gravity="center_horizontal"
                android:background="@color/tw_blue"
                android:textSize="21sp"
                android:textColor="@android:color/white"
                android:text=""
                android:paddingTop="30.5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:maxLines="3"
                android:ellipsize="end"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitXY"
                android:src="@drawable/post_action_bar_bg"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_post_item_view"
                    />
                <TextView
                    android:id="@+id/tv_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="0"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/icon_post_item_comment"
                    />
                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="0"
                    />

                <LinearLayout
                    android:id="@+id/btn_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icon_thumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/icon_post_item_thumb"
                        />
                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:text="0"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_come_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_come_true"
                android:visibility="gone"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- 作者頭像 -->
    <FrameLayout
        android:id="@+id/fl_author_avatar_container"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginTop="2.2dp"
        android:background="@drawable/post_item_avatar_bg_normal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_author_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginStart="1.5dp"
            android:src="@drawable/avatar_female"
            />
    </FrameLayout>
</RelativeLayout>
