<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/real_name_instruction_popup_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/border_type_d">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="羨慕你獲得"
            android:textSize="18sp"
            android:textColor="@color/tw_black">
        </TextView>

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_close"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            app:icon_src="@drawable/btn_close">

        </com.ftofs.twant.widget.ScaledButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/border_type_d">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_coupon_banner_container"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/rl_coupon_info_container">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_store_avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/cs_avatar_160">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="全朋友門店"
                        android:textSize="12sp"
                        android:textColor="#333">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_coupon_valid_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020.6.1-2020.7.1"
                        android:textColor="@color/tw_medium_grey"
                        android:textSize="10sp">

                    </TextView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_coupon_info_container"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:translationX="7dp"
                android:background="@drawable/yellow_voucher">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="@android:color/white"
                            android:textSize="16sp">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:text="10">

                        </TextView>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/tv_coupon_type_desc"
                        android:layout_width="82dp"
                        android:layout_height="22dp"
                        android:background="@android:color/white"
                        android:text="平臺專用"
                        android:textSize="14sp"
                        android:textColor="@color/tw_yellow"
                        android:gravity="center">

                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <TextView
            android:id="@+id/btn_receive"
            android:layout_width="271dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:text="馬上領取"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/red_button">
        </TextView>
    </RelativeLayout>
</LinearLayout>

