<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rv_work_experience_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:layout_gravity="bottom"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_work_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_work_experience"
            android:textColor="@color/tw_black"
            android:layout_centerVertical="true"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/btn_add_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/icon_add_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add"
            android:textColor="@color/tw_blue"
            android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_work_experience_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_15dp"
        android:background="@color/tw_grey_F3F3"
        android:gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_experience_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_work_experience_init"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mark_exclamation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_work_experience_init"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/tw_grey_F3F3"/>
    <RelativeLayout
        android:id="@+id/rv_education_experience_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_eduction_experience"
            android:textColor="@color/tw_black"
            android:layout_centerVertical="true"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/btn_add_education"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"

                android:src="@drawable/icon_add_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_add"
                android:textColor="@color/tw_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_education_experience_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_15dp"
        android:background="#F6F6F6"
        android:gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_education_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_education_experience_init"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mark_exclamation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_education_experience_init"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/tw_grey_F3F3"/>
    <RelativeLayout
        android:id="@+id/rv_certificate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_certificate"
            android:textColor="@color/tw_black"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/btn_add_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/icon_add_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add"
            android:textColor="@color/tw_blue"
            android:textSize="@dimen/sp_14" />


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_certificate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_15dp"
        android:background="#F6F6F6"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_certificate_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_certificate_init"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mark_exclamation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_certificate_init"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/tw_grey_F3F3"/>
    <RelativeLayout
        android:id="@+id/rv_honor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_honor_experience"
            android:textColor="@color/tw_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/btn_add_honnor_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/icon_add_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add"
            android:textColor="@color/tw_blue"
            android:textSize="@dimen/sp_14" />


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_honor_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_15dp"
        android:background="#F6F6F6"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_honor_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_honor_init"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mark_exclamation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_honor_init"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/tw_grey_F3F3"/>
    <RelativeLayout
        android:id="@+id/rv_skill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_skill_good"
            android:textColor="@color/tw_black"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/btn_add_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/icon_add_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add"
            android:textColor="@color/tw_blue"
            android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="@dimen/length_15dp"
        android:layout_marginStart="@dimen/length_15dp"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_edit"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:layout_toStartOf="@id/tv_edit"
            android:src="@drawable/icon_edit"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_skill_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_15dp"
        android:background="#F6F6F6"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_skill_init"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mark_exclamation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_skill_good_init"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_skill"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:layout_marginEnd="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_skill_good_init"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/tw_grey_F3F3"/>
</LinearLayout>