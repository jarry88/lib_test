<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/toolbar_margin_left"
    android:layout_marginRight="@dimen/toolbar_margin_right"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_left_container"
        android:layout_width="121dp"
        android:layout_height="100dp"
        android:background="@drawable/pink_voucher">
        <TextView
            android:id="@+id/tv_template_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:textColor="#fff"
            android:text="$10"
            />
        <TextView
            android:id="@+id/tv_limit_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="滿100減10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/voucher_item_right_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_centerVertical="true"
                    android:text="CORRIZI旗艦店"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    />
                <TextView
                    android:id="@+id/btn_receive_voucher_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:background="@drawable/pink_button"
                    android:text="@string/text_receive_now"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_usable_client_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:text="(PC尊享)"
                android:textSize="13sp"
                android:textColor="#FF676666"
                />
            <TextView
                android:id="@+id/tv_valid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="5dp"
                android:text="有效期: 2018.12.20 - 2019.1.20"
                android:textSize="13sp"
                android:textColor="#FF676666"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
