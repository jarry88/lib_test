<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_container_bg">
            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_search"
                />

            <ImageView
                android:id="@+id/btn_clear_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_clear_all_circle"
                />
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_search"
                android:layout_toLeftOf="@id/btn_clear_all"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                android:background="@null"
                android:hint="@string/search_keyword_hint"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="#FFA8A8A8"
                />
        </RelativeLayout>
    </RelativeLayout>
    <!-- END OF 工具欄 -->

    <!-- 篩選欄 -->
    <LinearLayout
        android:id="@+id/ll_filter_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_goods_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/goods_tab_title_general"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/goods_tab_title_sale"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/goods_tab_title_price"
                />
            <TextView
                android:id="@+id/btn_goods_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/text_filter"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_store_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bottom_separator_box"
            android:padding="10dp">
            <TextView
                android:id="@+id/btn_store_search_order_general"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_red"
                android:textSize="16sp"
                android:text="@string/store_tab_title_general"
                />
            <TextView
                android:id="@+id/btn_store_search_order_sale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/store_tab_title_sale"
                />
            <TextView
                android:id="@+id/btn_store_search_order_follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="@string/store_tab_title_follow"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search_result_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_filter_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/white">
    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/btn_goto_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_goto_top"
        />

    <ImageView
        android:id="@+id/btn_goto_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_goto_top"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_goto_cart"
        />
</android.support.constraint.ConstraintLayout>