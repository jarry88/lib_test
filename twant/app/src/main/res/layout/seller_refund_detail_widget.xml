<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_6dp_radius_bg"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <!-- 退款標題信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/toolbar_margin_left"
        android:paddingEnd="@dimen/toolbar_margin_right"
        android:background="@android:color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            >
            <TextView
                android:id="@+id/tv_refund_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/tw_black"
                />

            <TextView
                android:id="@+id/tv_refund_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </RelativeLayout>

    </LinearLayout>
    <!-- 退款申請信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/toolbar_margin_left"
        android:paddingEnd="@dimen/toolbar_margin_right"
        android:background="@android:color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_seller_refund_state"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/tw_white"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/margin12"
                android:paddingEnd="@dimen/margin12"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_20dp_bg"/>
            <LinearLayout
                android:id="@+id/ll_container_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="@dimen/dp_4"
                android:layout_marginEnd="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="訂單編號："
                    android:textSize="12sp"
                    android:textColor="@color/grgray"

                    />

                <TextView
                    android:id="@+id/tv_orders_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/tw_blue"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/ll_container_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="@dimen/dp_4"
                android:layout_marginEnd="60dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申請人（買家）："
                    android:textSize="12sp"
                    android:textColor="@color/grgray"
                    />

                <TextView
                    android:id="@+id/tv_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:textColor="@color/grgray"
                    />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="@dimen/dp_4"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申請時間："
                android:textSize="12sp"
                android:textColor="@color/grgray"

                />

            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/grgray"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="@dimen/dp_4"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款商品："
                android:textSize="12sp"
                android:textColor="@color/grgray"

                />

            <TextView
                android:id="@+id/tv_refund_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/tw_blue"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"            android:paddingBottom="@dimen/dp_4"


            android:background="@drawable/border_type_d">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="退款金額："
                android:textSize="12sp"
                android:textColor="@color/grgray"

                />

            <TextView
                android:id="@+id/tv_refund_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF6565"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/toolbar_margin_left"
        android:paddingEnd="@dimen/toolbar_margin_right"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="@dimen/dp_4">
            <TextView
                android:id="@+id/text_evidence_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="商家處理："

                android:textSize="12sp"
                android:textColor="@color/tw_black"
                />
            <TextView
                android:id="@+id/tv_seller_process_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/tw_black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="平臺處理："
                android:textSize="12sp"
                android:textColor="@color/tw_black"
                />

            <TextView
                android:id="@+id/tv_platform_process_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款狀態："
                android:textSize="12sp"
                android:textColor="@color/tw_black"
                />

            <TextView
                android:id="@+id/tv_refund_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
