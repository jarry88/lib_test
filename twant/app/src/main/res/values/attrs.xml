<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ScaledButton -->
    <attr name="icon_src" format="reference"></attr>
    <attr name="icon_width" format="dimension"></attr>
    <attr name="icon_height" format="dimension"></attr>
    <declare-styleable name="ScaledButton">
        <attr name="icon_src"></attr>
        <attr name="icon_width"></attr>
        <attr name="icon_height"></attr>
    </declare-styleable>


    <!-- TwTabButton -->
    <attr name="ttb_stroke_width" format="dimension"></attr> <!-- 下劃線的寬度 -->
    <attr name="ttb_use_cap" format="boolean"></attr>  <!-- 是否使用圓角 -->
    <declare-styleable name="TwTabButton">
        <attr name="ttb_stroke_width"></attr>
        <attr name="ttb_use_cap"></attr>
    </declare-styleable>


    <!-- SimpleTabButton -->
    <attr name="stb_stroke_width" format="dimension"></attr> <!-- 下劃線的寬度 -->
    <attr name="stb_use_cap" format="boolean"></attr>  <!-- 是否使用圓角 -->
    <attr name="stb_horizontal_padding" format="dimension"></attr> <!-- 向兩邊文字外擴展的寬度 -->
    <attr name="stb_text" format="string"></attr>
    <attr name="stb_padding_bottom" format="dimension"></attr> <!-- 下劃線離容器底部的距離 -->
    <attr name="stb_selected_color" format="color"></attr> <!-- 選中的高亮顏色 -->
    <declare-styleable name="SimpleTabButton">
        <attr name="stb_stroke_width"></attr>
        <attr name="stb_use_cap"></attr>
        <attr name="stb_horizontal_padding"></attr>
        <attr name="stb_text"></attr>
        <attr name="stb_padding_bottom"></attr>
        <attr name="stb_selected_color"></attr>
    </declare-styleable>


    <!-- SquareGridLayout -->
    <attr name="sgl_column_count" format="integer"></attr>
    <declare-styleable name="SquareGridLayout">
        <attr name="sgl_column_count"></attr>
    </declare-styleable>

    <!-- GridLayout -->
    <attr name="gl_column_count" format="integer"></attr>
    <declare-styleable name="GridLayout">
        <attr name="gl_column_count"></attr>
    </declare-styleable>

    <declare-styleable name="SmoothInputLayout">
        <attr name="silDefaultKeyboardHeight" format="dimension" />
        <attr name="silMinKeyboardHeight" format="dimension" />
        <attr name="silInputView" format="reference" />
        <attr name="silInputPane" format="reference" />
        <attr name="silAutoSaveKeyboardHeight" format="boolean" />
    </declare-styleable>
</resources>
