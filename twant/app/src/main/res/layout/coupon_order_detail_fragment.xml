<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.CouponOrderDetailInfo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftofs.twant.login.Title
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:tt ="@{`訂單詳情`}"
            app:layout_constraintTop_toTopOf="parent"
           />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/tw_grey_F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:background="@color/tw_white"
                    android:orientation="vertical">
                    <com.ftofs.twant.view.CouponListItemView
                        android:id="@+id/coupon_list_item"
                        android:layout_width="match_parent"
                        android:layout_marginTop="18dp"
                        android:paddingBottom="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        app:coupon_type="detail"
                        app:coupon_item_vo="@{vo.itemList[0].couponItemVo}"
                        android:layout_marginBottom="@dimen/dp_18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dash_blue_line"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_code_container"/>
                </LinearLayout>

                <com.ftofs.twant.view.StoreInfoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_information"
                    store_vo="@{vo.itemList[0].coupon.store}"/>
                <com.ftofs.twant.view.CouponPartInfoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/coupon_information"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/margin_8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ll_bottom"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_link"
                android:layout_width="155dp"
                android:layout_height="39dp"
                android:background="@drawable/coupon_btn_empty_big"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/tw_black"
                android:text="@string/text_link_store"
                />
            <TextView
                android:id="@+id/btn_buy_again"
                android:layout_width="155dp"
                android:layout_height="39dp"
                android:background="@drawable/coupon_btn_red_big"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:text="@string/text_again_to_buy"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
