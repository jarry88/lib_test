<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@drawable/post_list_item_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="尾款支付提醒"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            />
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2019/08/15 09:38"
            android:textSize="13sp"
            android:textColor="#666"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/cs_avatar_160"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="您的訂單:訂單單號4450000000467400已於2019-10-2814:17:44發貨，運單號：TW157224346"
            android:textColor="@color/tw_black"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/blue_button_75_25"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="好的"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        />
</LinearLayout>
