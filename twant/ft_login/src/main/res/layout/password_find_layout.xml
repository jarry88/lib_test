<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftofs.ft_login.widget.Title
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:text_title="找回密碼"
            app:login_info="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_password_info"
            android:textSize="13sp"
            android:padding="14dp"
            android:text="驗證碼登錄"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 驗證碼 -->
        <RelativeLayout
            android:id="@+id/rl_captcha_container"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_password_info"
            android:background="@drawable/border_type_d">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_margin_left"

                android:layout_centerVertical="true"
                android:src="@drawable/captcha"
                />

            <!--            <ImageView-->
            <!--                android:id="@+id/btn_refresh_captcha"-->
            <!--                android:layout_width="90dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_marginEnd="5dp"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                />-->
            <TextView
                android:id="@+id/btn_refresh_captcha"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_refresh_captcha"
                android:gravity="center"
                android:textColor="@color/tw_blue"
                android:textSize="@dimen/sp_14"
                android:text="@string/get_captcha"
                />

            <EditText
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_refresh_captcha"
                android:layout_centerVertical="true"
                android:layout_marginStart="41dp"
                android:background="@null"
                android:textColor="@color/tw_black"
                android:textColorHint="@color/tw_grey"
                android:hint="@string/input_captcha_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_get_message"
            android:text="驗證碼登錄"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_password_login"
            android:text="密碼登入"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_get_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <EditText
            android:id="@+id/et_number"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="请输入手机号"
            app:layout_constraintTop_toBottomOf="@id/btn_get_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <EditText
            android:id="@+id/et_recommend_number"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="请输入推薦碼"
            app:layout_constraintTop_toBottomOf="@id/btn_get_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="请输入手机号"
            app:layout_constraintTop_toBottomOf="@id/et_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>