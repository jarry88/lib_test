<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="@android:color/white">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="@dimen/toolbar_margin_right"
        android:background="@drawable/border_type_d">


        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/toolbar_margin_left"
            android:paddingRight="@dimen/toolbar_margin_right"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_shop_menu"
            />

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_search"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/btn_menu"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_shop_search"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_tab_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:tint="@color/tw_blue"
            android:src="@drawable/bottom_navigation_bar_bg"
            />
        
        <!-- 首頁 -->
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_commodity"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_bottom_bar_shop_avatar"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/bottom_bar_shop_avatar_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center"
                android:textSize="10sp"
                android:text="@string/shop_bottom_bar_title_home"
                android:textColor="#fff"
                />
        </LinearLayout>

        <!-- 商品 -->
        <LinearLayout
            android:id="@+id/btn_commodity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_home"
            app:layout_constraintRight_toLeftOf="@+id/btn_category"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_shop_bottom_bar_commodity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shop_bottom_bar_commodity"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:text="@string/shop_bottom_bar_title_commodity"
                android:textColor="#fff"
                />
        </LinearLayout>

        <!-- 分類 -->
        <LinearLayout
            android:id="@+id/btn_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_commodity"
            app:layout_constraintRight_toLeftOf="@+id/btn_activity"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_shop_bottom_bar_category"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shop_bottom_bar_category"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:text="@string/shop_bottom_bar_title_category"
                android:textColor="#fff"
                />
        </LinearLayout>

        <!-- 活動 -->
        <LinearLayout
            android:id="@+id/btn_activity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_category"
            app:layout_constraintRight_toLeftOf="@+id/btn_customer_service"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_shop_bottom_bar_activity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shop_bottom_bar_activity"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:text="@string/shop_bottom_bar_title_activity"
                android:textColor="#fff"
                />
        </LinearLayout>
        
        <!-- 客服 -->
        <LinearLayout
            android:id="@+id/btn_customer_service"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_activity"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_shop_bottom_bar_customer_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shop_bottom_bar_customer_service"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:text="@string/shop_bottom_bar_title_customer_service"
                android:textColor="#fff"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

