<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 地區區號 -->
    <LinearLayout
        android:id="@+id/ll_mobile_zone_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <include layout="@layout/mobile_zone_select" />
    </LinearLayout>

    <!-- 手機號 -->
    <RelativeLayout
        android:id="@+id/rl_mobile_container"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_mobile_zone_container"
        android:background="@drawable/border_type_d">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/mobile"
            />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41dp"
            android:background="@null"
            android:textColor="@color/tw_black"
            android:textColorHint="@color/tw_grey"
            android:hint="@string/input_mobile_hint"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:text=""
            android:textSize="17sp"
            />
    </RelativeLayout>

    <!-- 密碼 -->
    <RelativeLayout
        android:id="@+id/rl_password_container"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_mobile_container"
        android:background="@drawable/border_type_d">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_password"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41dp"
            android:background="@null"
            android:textColor="@color/tw_black"
            android:textColorHint="@color/tw_grey"
            android:hint="@string/input_login_password_hint"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:text=""
            android:textSize="17sp"
            />
    </RelativeLayout>

    <!-- 驗證碼 -->
    <RelativeLayout
        android:id="@+id/rl_captcha_container"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_password_container"
        android:background="@drawable/border_type_d">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/captcha"
            />

        <ImageView
            android:id="@+id/btn_refresh_captcha"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_refresh_captcha"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41dp"
            android:background="@null"
            android:textColor="@color/tw_black"
            android:textColorHint="@color/tw_grey"
            android:hint="@string/input_captcha_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="17sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tos_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_captcha_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_check"
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_checked">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/agree_and_login"
                android:textColor="#CBCBCB"
                android:textSize="14sp">
            </TextView>
            <TextView
                android:id="@+id/btn_view_tos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="《服務協議》"
                android:textSize="14sp"
                android:textColor="@color/tw_blue">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/text_forget_password"
            android:textColor="@color/tw_blue"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_tos_container"
        app:layout_constraintVertical_bias="1.0">
        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="265dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130.5dp"
            android:src="@drawable/btn_login_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="91dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_third_party_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="第三方登入"
                android:textColor="@color/tw_medium_grey"
                />

            <View
                android:layout_width="83dp"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_third_party_login"
                android:layout_centerVertical="true"
                android:background="@color/tw_light_grey"
                />

            <View
                android:layout_width="83dp"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_third_party_login"
                android:layout_centerVertical="true"
                android:background="@color/tw_light_grey"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_wechat_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_wechat"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/btn_facebook_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_facebook_login"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
