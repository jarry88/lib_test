<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
     類型A: 4條邊框都有
     類型B: 底邊框和右邊框
     類型C: 右邊框
     類型D: 底邊框
     類型E: 上邊框
     類型F: 上邊框和下邊框
     類型G: 上邊框、右邊框和下邊框
     類型H: 上邊框、左邊框和右邊框
     -->

    <item
        android:bottom="-2dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/tw_light_grey_EDED"/>
        </shape>
    </item>
</layer-list>