<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.CouponItemVo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tw_white"
        android:padding="@dimen/dp_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <com.ftofs.twant.view.CouponListItemView
                android:id="@+id/coupon_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coupon_type="order"
                app:coupon_item_vo="@{vo}"
                android:layout_marginBottom="@dimen/dp_18"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tw_light_grey_EDED"
                android:layout_marginBottom="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="數量"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.ftofs.twant.widget.AdjustButton
                    android:id="@+id/ab_quantity"
                    android:layout_width="92dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    />
            </LinearLayout>
            <com.ftofs.twant.widget.FixedEditText
                android:id="@+id/fixed"
                android:layout_marginBottom="14dp"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingEnd="10dp"
                android:textSize="13sp"
                android:minLines="2"
                android:hint="給商家留言，100字以內（選填）"
                android:background="@drawable/seller_edit_text_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tw_light_grey_EDED"
                android:layout_marginBottom="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/tw_white"
                    android:textSize="12sp"
                    android:text="券"
                    />
                <TextView
                    android:layout_marginEnd="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:text="優惠券"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_coupon_list"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="@{`可用優惠券`+String.valueOf(vo.stock)+`張`}"
                        android:layout_marginEnd="@dimen/margin_4dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/expand_button"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
