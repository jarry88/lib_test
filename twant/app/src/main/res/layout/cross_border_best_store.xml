<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- 優選好店 -->
    <LinearLayout
        android:id="@+id/ll_best_store_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="優選好店"
                    android:textColor="@color/tw_black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="NEW"
                    android:textSize="10sp"
                    android:textColor="#BBB">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_more_best_store"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="進入專場"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/expand_button">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <com.ftofs.twant.widget.GridLayout
            android:id="@+id/gl_store_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gl_column_count="2">
        </com.ftofs.twant.widget.GridLayout>
    </LinearLayout>
    <!-- END OF 優選好店 -->

</LinearLayout>
