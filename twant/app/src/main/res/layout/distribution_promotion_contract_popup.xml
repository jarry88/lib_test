<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/real_name_instruction_popup_bg">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_close_popup">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:text="分銷推廣協議"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="14sp"
            android:textColor="#333"
            android:text="根據海關總署公告2016年第26號《關於跨境電子商務零售進出口商品有關監管事宜的公告》，電子商務企業應向海關提供購買跨境電子商務零售進出口商品的個人（訂購人）的有效身份信息，訂購人與收貨人應為同一人。">
        </TextView>


        <FrameLayout
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/permission_dp_25"
            android:layout_marginEnd="@dimen/permission_dp_25"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">
            <ImageView
                android:id="@+id/btn_ok_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/blue_button1"
                android:scaleType="fitXY"
                app:tint="@color/tw_medium_grey">
            </ImageView>
            <TextView
                android:id="@+id/btn_ok_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="確認"
                android:textColor="@android:color/white"
                android:textSize="16sp">
            </TextView>
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
