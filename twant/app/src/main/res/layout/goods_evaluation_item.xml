<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- 店名 -->
    <LinearLayout
        android:id="@+id/ll_store_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_shop"
            />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="Yueaeow香薰"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/expand_button"
            />
    </LinearLayout>

    <!-- 產品 -->
    <LinearLayout
        android:id="@+id/ll_goods_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/cs_avatar_160"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="Yueaeow香薰精油香氛淡薰香家用室內臥室空氣清新留香"
                />
            <TextView
                android:id="@+id/tv_goods_full_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#929292"
                android:textSize="13sp"
                android:text="类型:玫瑰, 规格:10ml, 颜色:黑色"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- 編輯框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="#F7F7F7">
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textSize="16sp"
            android:textColor="@color/tw_medium_grey"
            android:hint="點擊發表說說"
            android:background="@null"
            />
        <com.ftofs.twant.widget.SquareGridLayout
            android:id="@+id/sgl_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:sgl_column_count="3">
            <ImageView
                android:id="@+id/btn_add_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_add_post_content_image"
                />
        </com.ftofs.twant.widget.SquareGridLayout>
    </LinearLayout>
</LinearLayout>


