<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/container_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:paddingStart="@dimen/margin12"
            android:paddingEnd="@dimen/margin12"
            android:id="@+id/seller_home_title"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:src="@drawable/go_to_seller_member"
                android:layout_centerVertical="true"
                android:id="@+id/btn_goto_member" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:paddingStart="@dimen/dp_4"
                android:paddingEnd="4dp"
                android:src="@drawable/icon_default_avatar"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_goto_member"
                android:id="@+id/img_seller_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:paddingStart="@dimen/dp_4"
                android:paddingEnd="4dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_seller_avatar"
                android:id="@+id/tv_seller_member_name"/>
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sw_seller_business_state"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:paddingStart="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:textColor="@color/tw_white"
                android:shadowColor="@color/tw_blue"/>




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tw_slight_grey">

            <com.ftofs.twant.widget.SquareGridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgl_column_count="1">
                <ImageView
                    android:id="@+id/img_seller_home_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="220dp"
                    android:src="@drawable/my_fragment_header_bg"
                    android:scaleType="centerCrop"
                    />
            </com.ftofs.twant.widget.SquareGridLayout>
            <FrameLayout
                android:id="@+id/btn_back_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:padding="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back_round"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_goto_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="74dp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/go_to_seller_member"
                    />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="188dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:paddingBottom="36dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/seller_fragment_head_bg_8dp"
                    android:layout_marginBottom="@dimen/margin12"

                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textSize="18sp"
                        android:textColor="@color/tw_black"
                        android:singleLine="true"
                        android:text="-"
                        />
                    <TextView
                        android:id="@+id/tv_store_signature"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="@string/member_signature"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_height="0.5dp"
                        android:background="@color/tw_light_grey_EDED"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7.5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="@dimen/margin12"
                        android:paddingBottom="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/border_type_d">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/iv_seller_order"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/tw_black"
                                    android:text=""
                                    />
                                <TextView
                                    android:id="@+id/tv_seller_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="13sp"
                                    android:textColor="@color/tw_black"
                                    android:text="@string/text_seller_order"
                                    />
                            </LinearLayout>
                            <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_seller_send"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/tw_black"
                                android:text=""
                                />
                            <TextView
                                android:id="@+id/tv_seller_send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="13sp"
                                android:textColor="@color/tw_black"
                                android:text="@string/text_seller_send"
                                />
                        </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/iv_seller_receive"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/tw_black"
                                    android:text=""
                                    />
                                <TextView
                                    android:id="@+id/tv_seller_receive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="13sp"
                                    android:textColor="@color/tw_black"
                                    android:text="@string/text_seller_receive"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/iv_seller_refund"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/tw_black"
                                    android:text=""
                                    />
                                <TextView
                                    android:id="@+id/tv_seller_refund"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="13sp"
                                    android:textColor="@color/tw_black"
                                    android:text="@string/text_seller_refund"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <!-- 商店公告 -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_shop_announcement_container"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/seller_fragment_head_bg_8dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/toolbar_margin_left"
                    android:paddingEnd="@dimen/toolbar_margin_right"
                    android:layout_marginBottom="@dimen/margin12"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/icon_broadcast_blue"
                        />

                    <cc.ibooker.ztextviewlib.AutoVerticalScrollTextView
                        android:id="@+id/tv_vertical_scroll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/img_notice_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/icon_shop_annoucement_menu" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/permission_dp_20"
                    android:paddingBottom="@dimen/permission_dp_20"
                    android:orientation="vertical"
                    android:background="@drawable/seller_fragment_blue_bg_8dp"
                    android:layout_marginBottom="@dimen/margin12"
>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_today_view_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="@color/tw_white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="@color/tw_white"
                                android:text="@string/text_today_view_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_today_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="@color/tw_white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="@color/tw_white"
                                android:text="@string/text_today_amount"
                                />
                        </LinearLayout><LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_today_order_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="@color/tw_white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="@color/tw_white"
                                android:text="@string/text_today_order_count"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/permission_dp_20"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_orders_wait_send_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="@color/tw_white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="@color/tw_white"
                                android:text="@string/text_orders_wait_send_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_message_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="@color/tw_white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="@color/tw_white"
                                android:text="@string/text_message_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_new_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17sp"
                            android:textColor="@color/tw_white"
                            android:text=""
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:textColor="@color/tw_white"
                            android:text="@string/text_new_comment_count"
                            />
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--產品數據，訂單數據標簽-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="@dimen/margin8">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/text_seller_goods_info"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="@dimen/margin8"
                        android:paddingBottom="@dimen/margin8"
                        android:id="@+id/btn_goods_info"
                        android:textColor="@color/tw_white"
                        android:layout_marginEnd="@dimen/margin8"
                        android:background="@drawable/blue_20dp_bg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/text_seller_orders_info"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="@dimen/margin8"
                        android:paddingBottom="@dimen/margin8"
                        android:id="@+id/btn_orders_info"
                        android:textColor="@color/tw_black"
                        android:background="@drawable/grey_20dp_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/permission_dp_20"
                    android:paddingBottom="@dimen/permission_dp_20"
                    android:orientation="vertical"
                    android:background="@drawable/seller_fragment_head_bg_8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_goods_common_onsale_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="#49D1A3"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="@string/text_goods_common_onsale_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_refund_waiting_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="#49D1A3"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="@string/text_refund_waiting_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_goods_common_fail_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="#49D1A3"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="@string/text_goods_common_fail_count"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_orders_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="#49D1A3"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="@string/text_goods_common_fail_count"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_bill_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="17sp"
                                android:textColor="#49D1A3"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="@string/text_bill_count"
                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginTop="136dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/default_store_avatar"
                />

        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

