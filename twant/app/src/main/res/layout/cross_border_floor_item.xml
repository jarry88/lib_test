<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/white_r4dp_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btn_more"
            android:layout_marginEnd="43dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="今日活動海淘海購不如跨城購活動今日活動海淘海購不如跨城購活動"
            android:textColor="@color/tw_black"
            android:textSize="15sp">
        </TextView>
        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_alignStart="@id/tv_title"
            android:layout_alignEnd="@id/tv_title"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="大家都在海淘海購不如跨城購大家都在海淘海購不如大家都在海淘海購不如跨城購大家都在海淘海購不如"
            android:textSize="10sp"
            android:textColor="#BBB">
        </TextView>

        <LinearLayout
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_title"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MORE"
                android:textSize="10sp"
                android:textColor="@color/tw_black">
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/expand_button">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_floor_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="331:124"
            app:riv_corner_radius="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/del">
        </com.makeramen.roundedimageview.RoundedImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_goods_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/ll_goods_container_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ll_goods_container_2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/goods_image_1"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:src="@drawable/cs_avatar_160">
            </ImageView>
            <TextView
                android:id="@+id/tv_goods_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="助腸胃消化餅乾"
                android:textColor="@color/tw_black"
                android:textSize="12sp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="價格："
                    android:textSize="10sp"
                    android:textColor="#BBBBBB">
                </TextView>
                <TextView
                    android:id="@+id/tv_goods_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$66"
                    android:textSize="10sp"
                    android:textColor="@color/tw_red">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_goods_container_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_goods_container_1"
            app:layout_constraintEnd_toStartOf="@id/ll_goods_container_3"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/goods_image_2"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:src="@drawable/cs_avatar_160">
            </ImageView>
            <TextView
                android:id="@+id/tv_goods_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="助腸胃消化餅乾"
                android:textColor="@color/tw_black"
                android:textSize="12sp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="價格："
                    android:textSize="10sp"
                    android:textColor="#BBBBBB">
                </TextView>
                <TextView
                    android:id="@+id/tv_goods_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$66"
                    android:textSize="10sp"
                    android:textColor="@color/tw_red">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_goods_container_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_goods_container_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/goods_image_3"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:src="@drawable/cs_avatar_160">
            </ImageView>
            <TextView
                android:id="@+id/tv_goods_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="助腸胃消化餅乾"
                android:textColor="@color/tw_black"
                android:textSize="12sp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="價格："
                    android:textSize="10sp"
                    android:textColor="#BBBBBB">
                </TextView>
                <TextView
                    android:id="@+id/tv_goods_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$66"
                    android:textSize="10sp"
                    android:textColor="@color/tw_red">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
