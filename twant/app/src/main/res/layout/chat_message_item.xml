<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical" >

    <!-- 聊天時間 上一條消息與本條消息超過5分鐘才顯示 -->
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#666"
        android:text="09:38:11"
        />

    <RelativeLayout
        android:id="@+id/rl_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_your_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_default_avatar"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_my_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_default_avatar"
            />

        <!-- 消息內容容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">
            <!-- 文本消息 -->
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/my_message_bg"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/tw_black"
                />
            <!-- 圖片消息 -->
            <LinearLayout
                android:id="@+id/ll_image_message_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left">
                <ImageView
                    android:id="@+id/img_message"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:src="@drawable/icon_default_avatar"
                    />
            </LinearLayout>
            <!-- 商品消息 -->
            <LinearLayout
                android:id="@+id/ll_goods_message_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/goods_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/icon_default_avatar"
                    />
                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />
            </LinearLayout>
            <!-- 訂單信息 -->
            <LinearLayout
                android:id="@+id/ll_order_message_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tw_black"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/order_goods_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/icon_default_avatar"
                        />
                    <TextView
                        android:id="@+id/tv_order_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/tw_black"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>