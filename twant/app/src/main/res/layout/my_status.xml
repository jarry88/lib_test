<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rv_my_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/toolbar_margin_right">

        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:text="@string/text_my_status"
            android:textColor="@color/tw_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/text_edit"
            android:textColor="@color/tw_blue"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/icon_edit_blue" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_my_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_my_status_title">
        <TextView
            android:id="@+id/tv_curr_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_curr_status"/>
        <TextView
            android:id="@+id/tv_curr_status_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_curr_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_curr_status"
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_work_time"
        android:layout_below="@id/rv_my_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_work_time"/>
        <TextView
            android:id="@+id/tv_work_time_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="@dimen/length_15dp"
            android:layout_marginTop="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_work_time"
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_education"
        android:layout_below="@id/rv_work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_eduction"/>
        <TextView
            android:id="@+id/tv_education_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="@dimen/length_15dp"
            android:layout_marginTop="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_education"
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
</RelativeLayout>