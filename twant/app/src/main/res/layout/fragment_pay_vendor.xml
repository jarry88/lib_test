                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_orange">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_mpay"
                            />
                        <LinearLayout
                            android:id="@+id/ll_mpay_activity_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                                android:text="MPay"
                                />
                            <TextView
                                android:id="@+id/tv_mpay_activity_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingLeft="2.5dp"
                                android:paddingRight="2.5dp"
                                android:text="活动期间最高享99元优惠券"
                                android:textColor="#FFA800"
                                android:textSize="10sp"
                                android:background="@drawable/mpay_activity_indicator_bg"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_mpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="MPay"
                            />


                        <ImageView
                            android:id="@+id/mask_mpay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/icon_mpay_activity_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:translationX="14dp"
                            android:translationY="-12dp"
                            android:src="@drawable/icon_mpay_activity_label"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />

                    <RelativeLayout
                        android:id="@+id/btn_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="85dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_blue">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_wallet"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                                android:text="想付錢包"
                                />
                            <TextView
                                android:id="@+id/tv_wallet_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="(餘額：$0.00)"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/mask_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="145dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="155dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                    <RelativeLayout
                        android:id="@+id/btn_taifung_pay"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="170dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_yellow">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_taifung"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/tw_black"
                            android:text="大豐銀行電子支付"
                            />
                        <ImageView
                            android:id="@+id/mask_taifung_pay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="64dp"
                            android:layout_alignParentBottom="true"
                            android:text="支持銀聯、Visa、萬事達卡支付"
                            android:textColor="@color/tw_black"
                            android:textSize="10sp">
                        </TextView>
                    </RelativeLayout>

                    <!--
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                    <RelativeLayout
                        android:id="@+id/btn_union_pay"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_deep_blue">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_union"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="64dp"
                            android:layout_marginTop="28dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="銀聯"
                            />
                    </RelativeLayout>
                    -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="230dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                    <RelativeLayout
                        android:id="@+id/btn_alihk_pay"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_blue">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_alipay_hk"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="AlipayHK"
                            />
                        <ImageView
                            android:id="@+id/mask_alihk_pay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="315dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="325dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                    <RelativeLayout
                        android:id="@+id/btn_weixin_pay"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="340dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_green">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_weixin"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="微信支付（內地）"
                            />
                        <ImageView
                            android:id="@+id/mask_weixin_pay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="400dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="410dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                    <RelativeLayout
                        android:id="@+id/btn_ali_pay"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="425dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_blue">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/new_icon_pay_alipay"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="支付寶（內地）"
                            />
                        <ImageView
                            android:id="@+id/mask_ali_pay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="485dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_shadow"
                        />

                    <RelativeLayout
                        android:id="@+id/btn_expand_pay"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="495dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@drawable/pay_vendor_bg_blue">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="支付寶（內地）"
                            />
                        <ImageView
                            android:id="@+id/mask_expand_pay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pay_vendor_mask"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <!-- 最后一個用于支付的View -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="495dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_below="@id/vw_first_separator"
                        android:background="@android:color/white"
                        />
                </RelativeLayout>
            </ScrollView>
            <LinearLayout
                android:minHeight="45dp"
                android:id="@+id/btn_pay_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_above="@id/btn_pay"
                android:layout_alignParentTop="true"
                android:layout_marginTop="270dp"
                android:orientation="vertical"
                android:background="@color/tw_white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                >
                <LinearLayout
                    android:id="@+id/btn_express_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/permission_dp_20"
                    android:paddingEnd="@dimen/permission_dp_20"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/text_express_other_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/select_other_pay"
                        android:layout_margin="@dimen/dp_10"/>

                    <ImageView android:id="@+id/icon_express_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_pay_vendor_expand"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_up_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/permission_dp_20"
