<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.CouponDetailVo" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--                店內套餐-->
        <LinearLayout
            android:id="@+id/ll_mix_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/white"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店內套餐"
                android:textColor="@color/tw_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_15"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/ll_pkg_container"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="vertical"
                android:id="@+id/btn_show_more"
                android:visibility="gone"
                android:gravity="center"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tw_light_grey_EDED"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_look_more"
                        android:textSize="12sp"
                        android:textColor="@color/tw_grey_666"/>
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="3dp"
                        android:src="@drawable/icon_trigle_grey"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="6dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用須知"
                android:textColor="@color/tw_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                />
<!--            有效期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效期"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.validityDate}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>

                </LinearLayout>
            </LinearLayout>
<!--            使用時段-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用時段"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.useTimeText,default =`-`}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>

                </LinearLayout>
            </LinearLayout>
<!--            購買數量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="購買數量"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.limitBuyString}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>

                </LinearLayout>
            </LinearLayout>
<!--            使用人數-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用人數"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.limitUsePeopleString`}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>

                </LinearLayout>
            </LinearLayout>
<!--            消費限額-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消費限額"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.limitPay?String.valueOf(vo.limitPayNum):`無限制`}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>

                </LinearLayout>
            </LinearLayout>
<!--            其他服务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/tw_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他服务"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.parkingTypeString}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vo.freeWifiString}"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="@color/tw_black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:layout_marginBottom="6dp"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他說明"
                android:textColor="@color/tw_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/tw_black"
                android:textSize="18sp"
                android:text="@{vo.des}"/>
        </LinearLayout>
    </LinearLayout>
</layout>
