<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/container_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="44dp"
        android:background="#F3F3F3"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.ftofs.twant.widget.SquareGridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgl_column_count="1">
                <ImageView
                    android:id="@+id/img_personal_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/my_fragment_header_bg"
                    android:scaleType="centerCrop"
                    />
            </com.ftofs.twant.widget.SquareGridLayout>
            <FrameLayout
                android:id="@+id/btn_back_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:padding="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back_round"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="7dp"
                android:layout_alignParentEnd="true"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_setting"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btn_goto_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_toStartOf="@id/btn_setting"
                android:visibility="gone"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_goto_seller"
                    />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170.5dp"
                android:gravity="center_horizontal"
                android:background="@drawable/my_fragment_content_bg"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="69dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textSize="18sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />

                <TextView
                    android:id="@+id/tv_member_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/member_level_bg"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_member_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:text="@string/member_signature"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_type_d">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_popularity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="14sp"
                                android:textColor="@color/tw_black"
                                android:text="@string/text_popularity"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_fans_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="14sp"
                                android:textColor="@color/tw_black"
                                android:text="@string/text_fans"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_article_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="14sp"
                                android:textColor="@color/tw_black"
                                android:text="@string/text_article"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="13dp"
                    android:background="@drawable/border_type_d"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/btn_mall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/icon_my_shopping"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_my_mall"
                                    />
                                <TextView
                                    android:id="@+id/tv_shopping_message_item_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/icon_my_shopping"
                                    android:layout_marginStart="-5dp"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:background="@drawable/red_bubble_bg"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@android:color/white"
                                    android:textSize="6sp"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text="購物"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_friends"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_my_friends"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text="社交"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_article"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_my_article"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text="想要"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_want_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_want_job"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:textColor="@color/tw_black"
                                android:text="@string/text_want_job"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 想粉 -->
                <RelativeLayout
                    android:id="@+id/rl_follow_me_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="7dp">
                    <TextView
                        android:id="@+id/tv_follow_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_follow_me_square"
                        android:textColor="#666"
                        android:textSize="12sp"
                        />

                    <com.ftofs.twant.widget.ScaledButton
                        android:id="@+id/icon_expand"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:icon_src="@drawable/expand_button"
                        />

                    <!-- 【想粉】頭像列表 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_follow_me_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/tv_follow_me"
                        android:layout_toStartOf="@id/icon_expand"
                        android:layout_centerVertical="true">
                    </androidx.recyclerview.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/btn_show_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/icon_expand"
                        android:layout_centerVertical="true"
                        android:src="@drawable/avatar_transparent_gradient"
                        />

                </RelativeLayout>

                <!-- 發表按鈕 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3F3F3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btn_publish_post"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_publish_post_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_author_avatar"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/grey_default_avatar"
                            app:civ_border_color="#BBB"
                            app:civ_border_width="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/text_publish_post"
                            android:textColor="#666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.mikhaellopez.circleview.CircleView
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_marginTop="114dp"
                android:layout_centerHorizontal="true"
                app:cv_color="#fff"
                app:cv_shadow="true"
                app:cv_shadow_color="#aaa"
                app:cv_shadow_radius="10"
                app:cv_shadow_gravity="center">
            </com.mikhaellopez.circleview.CircleView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginTop="124dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_default_avatar"
                />

            <com.ftofs.twant.widget.QuickClickButton
                android:id="@+id/btn_quick_click"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_post_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F3F3F3">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

