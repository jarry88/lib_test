<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/toolbar_margin_left"
    android:layout_marginRight="@dimen/toolbar_margin_right">

    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="17dp"
        android:paddingBottom="28dp"
        android:textSize="14sp"
        android:textColor="@color/tw_black"
        android:text=""
        android:background="@drawable/icon_cs_message_bubble"
        />

    <TextView
        android:id="@+id/tv_staff_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_welcome_message"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="16dp"
        android:paddingBottom="6dp"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textColor="@color/tw_black"
        android:text=""
        android:background="@drawable/customer_service_staff_name_bg"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_staff_avatar"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_welcome_message"
        android:src="@mipmap/ic_launcher"
        />
</RelativeLayout>
