<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/bottom_toolbar_max_height">

        <!-- 店铺头像 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_shop_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <!-- 營業中還是休息中 -->
        <ImageView
            android:id="@+id/img_store_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="42dp"
            />

        <!-- 店铺签名 -->
        <LinearLayout
            android:id="@+id/ll_shop_signature_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/img_shop_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_shop_signature"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:background="@drawable/shop_signature_bg"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>


        <!-- 开店天数 -->
        <TextView
            android:id="@+id/tv_shop_open_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_shop_signature_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"
            android:textColor="@color/tw_black"
            />

        <!-- 店铺形象图 -->
        <ImageView
            android:id="@+id/img_shop_figure"
            android:layout_width="0dp"
            android:layout_height="223dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_open_day"
            />

        <!-- 店鋪公告 -->
        <LinearLayout
            android:id="@+id/ll_shop_announcement_container"
            android:layout_width="0dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toBottomOf="@id/img_shop_figure"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/toolbar_margin_left"
            android:paddingRight="@dimen/toolbar_margin_right"
            android:background="@color/tw_blue"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_broadcast"
                />
            <!--
            <TextView
                android:id="@+id/tv_store_announcement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="本店產品最新商家，優惠力度達到50%快快搶購吧！"
                android:textColor="#fff"
                android:textSize="13sp"
                />
            -->
            <cc.ibooker.ztextviewlib.AutoVerticalScrollTextView
                android:id="@+id/tv_vertical_scroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_shop_annoucement_menu"
                />
        </LinearLayout>

        <!-- 店友 -->
        <RelativeLayout
            android:id="@+id/rl_shop_friend_container"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/ll_shop_announcement_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/tv_shop_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_store_friend"
                />

            <LinearLayout
                android:id="@+id/btn_show_all_store_friends"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/expand_button"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_store_friends_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_shop_friend"
                android:layout_toLeftOf="@id/btn_show_all_store_friends">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <!-- 游客數量 -->
        <TextView
            android:id="@+id/tv_visitor_count"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/rl_shop_friend_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:text=""
            android:textSize="14sp"
            android:textColor="#666"
            android:background="#F3F3F3"
            />

        <!-- 用戶操作 -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_user_operation_container"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/tv_visitor_count"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/border_type_d">
            <LinearLayout
                android:id="@+id/ll_uo_thumb_up_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ll_uo_like_container"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_chainStyle="spread_inside">
                <ImageView
                    android:id="@+id/btn_store_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_store_thumb_grey"
                    />
                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uo_like_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ll_uo_thumb_up_container"
                app:layout_constraintRight_toLeftOf="@+id/ll_uo_share_container"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_store_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_store_favorite_grey"
                    />
                <TextView
                    android:id="@+id/tv_favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uo_share_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ll_uo_like_container"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="@string/text_share"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <!-- 店鋪信息 -->
        <LinearLayout
            android:id="@+id/ll_shop_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/cl_user_operation_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/border_type_d"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_mobile"
                    />
                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_mobile"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="@color/tw_black"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/icon_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_work_time" />

                <!-- 营业时间 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/icon_work_time"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_black"
                            android:textSize="17sp"
                            android:text="工作日："
                            />
                        <TextView
                            android:id="@+id/tv_business_time_working_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_black"
                            android:textSize="17sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_black"
                            android:textSize="17sp"
                            android:text="周&#12288;末："
                            />
                        <TextView
                            android:id="@+id/tv_business_time_weekend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_black"
                            android:textSize="17sp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/icon_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_shop_location"
                    />

                <TextView
                    android:id="@+id/btn_shop_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:textSize="12sp"
                    android:textColor="@color/tw_blue"
                    android:text="@string/text_map"
                    android:background="@drawable/icon_shop_map"
                    />

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_shop_location"
                    android:layout_toLeftOf="@id/btn_shop_map"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="17sp"
                    android:textColor="@color/tw_black"
                    />
            </RelativeLayout>

            <!-- 分享到 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/icon_share_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_share_to"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_share_to"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:id="@+id/ll_sns_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
        <!-- END OF 店鋪信息 -->

        <!-- 支付方式 -->
        <RelativeLayout
            android:id="@+id/rl_pay_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/ll_shop_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/icon_pay_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_pay_with"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_pay_with"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:id="@+id/ll_pay_way_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <!-- 分隔條 -->
        <View
            android:id="@+id/vw_separator_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rl_pay_way"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/tw_light_grey"
            />

        <!-- 店鋪評論 -->
        <RelativeLayout
            android:id="@+id/rl_shop_comment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_separator_1"
            android:padding="@dimen/toolbar_margin_left">

            <!-- 頭部 -->
            <RelativeLayout
                android:id="@+id/rl_comment_area_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_comment_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tw_dark_grey"
                    android:textSize="16sp"
                    />

                <!-- 查看全部 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/text_view_all"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/expand_button"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </RelativeLayout>

            <!-- 第1條評論 -->
            <LinearLayout
                android:id="@+id/ll_first_comment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_comment_area_header"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_author_avatar"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_author_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="13sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/tw_black"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <!-- 分隔條 -->
        <View
            android:id="@+id/vw_separator_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rl_shop_comment_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/tw_light_grey"
            />

        <!-- 店鋪招聘 -->
        <LinearLayout
            android:id="@+id/ll_store_wanted_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_separator_2"
            android:padding="@dimen/toolbar_margin_left"
            android:orientation="vertical">

            <!-- 頭部 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tw_dark_grey"
                    android:text="@string/text_store_wanted"
                    android:textSize="16sp"
                    />

                <!-- 查看全部 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/text_view_all"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/expand_button"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </RelativeLayout>

            <!-- 第1條招聘 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_job_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="wanted1"
                    />
                <TextView
                    android:id="@+id/tv_job_salary1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="10000-15000"
                    />
            </RelativeLayout>
            <!-- 第2條招聘 -->
            <RelativeLayout
                android:id="@+id/rl_2nd_store_wanted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_job_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="wanted2"
                    />
                <TextView
                    android:id="@+id/tv_job_salary2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="15000-15001"
                    />
            </RelativeLayout>
        </LinearLayout>

        <!-- 分隔條 -->
        <View
            android:id="@+id/vw_separator_store_wanted"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@id/ll_store_wanted_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/tw_light_grey"
            />

        <!-- 鎮店之寶 -->
        <LinearLayout
            android:id="@+id/ll_features_goods_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vw_separator_store_wanted"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="21sp"
                android:text="鎮 店 之 寶"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="10sp"
                android:text="U n i q u e   P r o d u c t"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_features_goods_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <!-- 店鋪熱賣 -->
        <LinearLayout
            android:id="@+id/ll_store_hot_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_features_goods_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="21sp"
                android:text="熱 賣 產 品"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="10sp"
                android:text="H O T   S A L E"
                />
            <LinearLayout
                android:id="@+id/ll_hot_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <!-- 最新商品 -->
        <LinearLayout
            android:id="@+id/ll_store_new_in_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_store_hot_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="21sp"
                android:text="最 新 產 品"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="10sp"
                android:text="N E W   I N"
                />
            <LinearLayout
                android:id="@+id/ll_new_in_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
