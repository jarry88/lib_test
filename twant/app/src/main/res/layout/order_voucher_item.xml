<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/toolbar_margin_left"
    android:layout_marginEnd="@dimen/toolbar_margin_right"
    android:layout_marginTop="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_left_container"
            android:layout_width="133.5dp"
            android:layout_height="120.5dp"
            android:background="@drawable/yellow_voucher">
            <TextView
                android:id="@+id/tv_template_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_centerHorizontal="true"
                android:textSize="23sp"
                android:textColor="#fff"
                android:text="$10"
                />
            <TextView
                android:id="@+id/tv_limit_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_usage_desc"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textColor="#fff"
                android:text="滿100減10"
                android:layout_marginBottom="9dp"

                />
            <TextView
                android:id="@+id/tv_usage_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="13.5dp"
                android:paddingRight="13.5dp"
                android:text="店舖專用"
                android:textColor="@color/tw_yellow"
                android:background="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"


                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120.5dp"
            android:layout_weight="1"
            android:background="@drawable/coupon_bg_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_coupon_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/app_logo"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CORRIZI旗艦店"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        android:visibility="visible" />
                    <!--
                    <TextView
                        android:id="@+id/btn_receive_voucher_now"
                        android:layout_width="63dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"

                        android:background="@drawable/use_coupon_red_button"
                        android:text="@string/text_use_now"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        />
                        -->
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_usable_client_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="s"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:textColor="#FF676666"
                    />
                <TextView
                    android:id="@+id/tv_valid_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="5dp"
                    android:text="有效期: 2018.12.20 - 2019.1.20"
                    android:textSize="13sp"
                    android:textColor="#FF676666"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/vw_voucher_in_use_indicator"
        android:layout_width="match_parent"
        android:layout_height="120.dp"
        android:background="@drawable/confirm_order_voucher_bg"
        />
</RelativeLayout>

