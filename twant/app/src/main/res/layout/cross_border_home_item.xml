<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="home_item"
        android:gravity="center">

    </TextView>

    <com.ftofs.twant.widget.StoreDesktop
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">
    </com.ftofs.twant.widget.StoreDesktop>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:background="@drawable/cross_border_row_pane_bg">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:textSize="12sp"
                android:textColor="@color/tw_black"
                android:text="小動物奶油童趣蛋糕糕小動物奶油童趣蛋糕糕"
                android:singleLine="true"
                android:ellipsize="end">
            </TextView>

            <TextView
                android:id="@+id/tv_goods_jingle_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:textSize="10sp"
                android:textColor="#636363"
                android:text="植物油奶油提煉無添加純天然植物油奶油提煉無添加純天然"
                android:singleLine="true"
                android:ellipsize="end">
            </TextView>

            <!--
            <TextView
                android:id="@+id/tv_conform_left"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="4dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text=""
                android:textSize=""
                android:gravity="center">

            </TextView>
            -->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
