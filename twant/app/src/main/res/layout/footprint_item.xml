<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 日期 -->
    <LinearLayout
        android:id="@+id/ll_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:background="@drawable/footprint_date_bg"
        android:orientation="horizontal">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_select_date"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            app:icon_src="@drawable/icon_cart_item_unchecked"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dp"
            android:gravity="center_vertical"
            android:text="2019-01-07"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
    </LinearLayout>


    <!-- 店名 -->
    <LinearLayout
        android:id="@+id/ll_store_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_select_store"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            app:icon_src="@drawable/icon_cart_item_unchecked"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_shop"
            />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="Yueaeow香薰"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/expand_button"
            />
    </LinearLayout>

    <!-- 商品 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_select_goods"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            app:icon_src="@drawable/icon_cart_item_unchecked"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/cs_avatar_160"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="Yueaeow香薰精油香氛淡薰香家用室"
                />
            <TextView
                android:id="@+id/tv_goods_jingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/tw_dark_grey"
                android:textSize="14sp"
                android:text="澳洲制造 优选羊毛缝制"
                />
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/tw_red"
                android:textSize="14sp"
                android:text="$129.00"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>