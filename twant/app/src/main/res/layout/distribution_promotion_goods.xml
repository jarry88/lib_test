<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/white_r4dp_bg">
    <ImageView
        android:id="@+id/ic_selected_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_check_box_24">
    </ImageView>

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cs_avatar_160">
    </ImageView>

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_distribution_share">
    </ImageView>

    <FrameLayout
        android:id="@+id/fl_commission_rate_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_goods"
        app:layout_constraintBottom_toBottomOf="@id/img_goods">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一級：10%"
            android:textSize="11sp"
            android:textColor="@color/tw_medium_grey">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="二級：5%"
            android:textSize="11sp"
            android:textColor="@color/tw_medium_grey">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/img_goods"
        app:layout_constraintEnd_toStartOf="@id/fl_commission_rate_container"
        app:layout_constraintTop_toTopOf="@id/img_goods"
        app:layout_constraintBottom_toBottomOf="@id/img_goods">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="松云蛋糕营养学生小松云蛋糕营养学生小面"
            android:textColor="@color/tw_black"
            android:singleLine="true"
            android:ellipsize="end">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="¥100"
            android:textColor="@color/tw_medium_grey"
            android:textSize="11sp">
        </TextView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
