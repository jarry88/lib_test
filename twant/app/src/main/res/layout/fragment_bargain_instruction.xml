<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/white">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="砍價"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            />
    </RelativeLayout>
    <!-- END OF 工具欄 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="@color/tw_black"
        android:text="如何參與砍價？">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="207dp">
        <ImageView
            android:id="@+id/ic_bargain_step_initiate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_bargain_step_initiate">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_initiate"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_initiate"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_initiate"
            android:text="商家發起砍價活動"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>

        <ImageView
            android:id="@+id/ic_bargain_step_participate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_bargain_step_participate">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_participate"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_participate"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_participate"
            android:text="會員參加砍價活動"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>

        <ImageView
            android:id="@+id/ic_bargain_step_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="43dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_bargain_step_invite">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_invite"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_invite"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_invite"
            android:text="邀請好友幫砍"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>

        <ImageView
            android:id="@+id/ic_bargain_step_invite_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_bargain_step_invite_more">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_invite_more"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_invite_more"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_invite_more"
            android:text="多人幫砍價更優惠"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>

        <ImageView
            android:id="@+id/ic_bargain_step_to_bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_bargain_step_to_bottom_price">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_to_bottom_price"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_to_bottom_price"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_to_bottom_price"
            android:text="最低砍至底價"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>

        <ImageView
            android:id="@+id/ic_bargain_step_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="43dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_bargain_step_pay">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ic_bargain_step_pay"
            app:layout_constraintLeft_toLeftOf="@id/ic_bargain_step_pay"
            app:layout_constraintRight_toRightOf="@id/ic_bargain_step_pay"
            android:text="購買支付"
            android:textColor="#333"
            android:textSize="12sp">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

