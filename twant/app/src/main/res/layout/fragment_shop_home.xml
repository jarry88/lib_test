<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/bottom_toolbar_max_height">



        <!-- 店铺头像 -->
        <ImageView
            android:id="@+id/img_shop_avatar"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <!-- 店铺签名 -->
        <TextView
            android:id="@+id/tv_shop_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/img_shop_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shop_signature_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:textSize="12sp"
            android:textColor="#fff"
            />

        <!-- 开店天数 -->
        <TextView
            android:id="@+id/tv_shop_open_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_signature"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"
            android:textColor="@color/tw_black"
            />

        <!-- 店铺形象图 -->
        <ImageView
            android:id="@+id/img_shop_figure"
            android:layout_width="0dp"
            android:layout_height="223dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_open_day" />

        <!-- 店鋪公告 -->
        <LinearLayout
            android:id="@+id/ll_shop_announcement_container"
            android:layout_width="0dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toBottomOf="@id/img_shop_figure"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/toolbar_margin_left"
            android:paddingRight="@dimen/toolbar_margin_right"
            android:background="@color/tw_red"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_broadcast"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="本店產品最新商家，優惠力度達到50%快快搶購吧！"
                android:textColor="#fff"
                android:textSize="13sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_shop_annoucement_menu"
                />
        </LinearLayout>

        <!-- 店友 -->
        <RelativeLayout
            android:id="@+id/rl_shop_friend_container"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/ll_shop_announcement_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bottom_separator_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/tw_dark_grey"
                android:text="@string/text_shop_friend"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/expand_button"
                />
        </RelativeLayout>

        <!-- 用戶操作 -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_user_operation_container"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/rl_shop_friend_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bottom_separator_box">
            <LinearLayout
                android:id="@+id/ll_uo_thumb_up_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ll_uo_like_container"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_chainStyle="spread_inside">
                <ImageView
                    android:id="@+id/btn_store_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_store_thumb_grey"
                    />
                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uo_like_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ll_uo_thumb_up_container"
                app:layout_constraintRight_toLeftOf="@+id/ll_uo_share_container"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_store_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_store_favorite_grey"
                    />
                <TextView
                    android:id="@+id/tv_favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uo_share_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ll_uo_like_container"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    android:text="@string/text_share"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <!-- 店鋪信息 -->
        <LinearLayout
            android:id="@+id/ll_shop_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/cl_user_operation_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/bottom_separator_box"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_mobile"
                    />
                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_mobile"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="@color/tw_black"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/icon_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_work_time" />

                <!-- 营业时间 -->
                <TextView
                    android:id="@+id/tv_business_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/icon_work_time"
                    android:textColor="@color/tw_black"
                    android:textSize="17sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/icon_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_shop_location"
                    />

                <TextView
                    android:id="@+id/icon_shop_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:textSize="12sp"
                    android:textColor="#FF00B0FF"
                    android:text="@string/text_map"
                    android:background="@drawable/icon_shop_map"
                    />

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_shop_location"
                    android:layout_toLeftOf="@id/icon_shop_map"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="17sp"
                    android:textColor="@color/tw_black"
                    />
            </RelativeLayout>

            <!-- 分享到 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/icon_share_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_share_to"
                    />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_share_to"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:id="@+id/ll_sns_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
        <!-- END OF 店鋪信息 -->

        <!-- 支付方式 -->
        <RelativeLayout
            android:id="@+id/rl_pay_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            app:layout_constraintTop_toBottomOf="@id/ll_shop_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/icon_pay_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_pay_with"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_pay_with"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:id="@+id/ll_pay_way_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <!-- 分隔條 -->
        <View
            android:id="@+id/vw_separator_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rl_pay_way"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#ededed"
            />

        <!-- 店鋪評論 -->
        <RelativeLayout
            android:id="@+id/rl_shop_comment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_separator_1"
            android:padding="@dimen/toolbar_margin_left">

            <!-- 頭部 -->
            <RelativeLayout
                android:id="@+id/rl_comment_area_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_comment_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tw_dark_grey"
                    android:textSize="16sp"
                    />

                <!-- 查看全部 -->
                <LinearLayout
                    android:id="@+id/btn_view_all_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/text_view_all"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/expand_button"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </RelativeLayout>

            <!-- 第1條評論 -->
            <LinearLayout
                android:id="@+id/ll_first_comment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_comment_area_header"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_author_avatar"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_author_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="13sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tw_black"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <!-- 分隔條 -->
        <View
            android:id="@+id/vw_separator_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@id/rl_shop_comment_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#ededed"
            />


        <!-- 最新商品 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vw_separator_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="21sp"
                android:text="@string/text_new_in_chinese"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/tw_black"
                android:textSize="21sp"
                android:text="@string/text_new_in_english"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
