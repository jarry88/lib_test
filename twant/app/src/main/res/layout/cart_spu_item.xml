<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:background="#FAFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="horizontal">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_check_spu"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            app:icon_src="@drawable/icon_cart_item_unchecked"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"

            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/btn_goto_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/goods_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cs_avatar_160"
                    app:riv_border_color="@color/tw_bright_grey"
                    app:riv_border_width="0.5dp"
                    app:riv_corner_radius="1dp"
                    />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/mask_image"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_cart_sku_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <!-- 贈品列表 -->
        <LinearLayout
            android:id="@+id/ll_gift_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="visible">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/tw_light_grey_EDED"/>
</LinearLayout>
