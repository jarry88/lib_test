<?xml version="1.0" encoding="utf-8"?>
<layout     xmlns:binding="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.CouponDetailVo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftofs.twant.login.Title
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:tt ="@{vo.title}"
            app:layout_constraintTop_toTopOf="parent"
           />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/tw_grey_F3F3">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:paddingStart="@dimen/length_15dp"
                        android:paddingEnd="@dimen/length_15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_6">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="14dp"
                            android:src="@drawable/icon_postion"
                            android:layout_marginEnd="@dimen/dp_6"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@{vo.storeName+`|`+vo.store.address}"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginStart="@dimen/length_15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@{vo.title}"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_grey_A8"
                            android:text="@{vo.tips}"
                            android:textSize="12sp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tw_grey_A8"

                            android:textSize="12sp"
                            android:text="@{`已售：`+String.valueOf(vo.sale)}"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        visibleOrGone="@{vo.showPicList}">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            binding:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:id="@+id/rv_image"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:id="@+id/btn_left_select"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:id="@+id/btn_right_select"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"/>
                        <LinearLayout

                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_4"
                            android:paddingEnd="@dimen/dp_4"
                            android:background="#99161616"
                            radius="@{3f}"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="12dp"
                                android:src="@drawable/coupon_img_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tw_white"
                                android:textSize="12sp"
                                android:text="@{vo.imgSize}"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/tw_grey_666"
                        android:text="@{vo.subTitle}"/>
                </LinearLayout>
                <com.ftofs.twant.view.CouponPartInfoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/coupon_information"/>
                <com.ftofs.twant.view.StoreInfoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_information"
                    store_vo="@{vo.store}"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/margin_8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ll_bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    price="@{vo.price}"
                    app:tv_red="@{true}"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/tw_grey"
                        android:text="門市價"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/tw_grey"
                        app:price="@{vo.originalPrice}"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_buy"
                android:layout_width="155dp"
                android:layout_height="39dp"
                android:background="@drawable/coupon_btn_red_big"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:text="@string/text_instance_to_buy"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
