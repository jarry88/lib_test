<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.GoeftUser" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftofs.twant.login.Title
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
           />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/vw_anchor"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:id="@+id/tab_layout">
        </com.google.android.material.tabs.TabLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/refresh_layout">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                binding:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_house_vo"
                android:id="@+id/rv_list"

                />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_search_history_container"
            app:layout_constraintTop_toBottomOf="@id/vw_anchor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/tw_mask_bg_color"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/history_popup_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="#F7F7F7"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="31dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="歷史搜索"
                        android:textSize="14sp"
                        android:textColor="#676666"
                        />
                </RelativeLayout>
                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/fl_search_history_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flChildSpacing="15dp"
                    app:flRowSpacing="15dp">
                </com.nex3z.flowlayout.FlowLayout>

                <LinearLayout
                    android:id="@+id/ll_clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="43dp"
                    android:paddingRight="43dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/category_search_history_item_bg">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_delete"
                        />
                    <TextView
                        android:id="@+id/btn_clear_all_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#676666"
                        android:textSize="14sp"
                        android:text="清除歷史"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_search_hot_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="熱門搜索"
                        android:textColor="#676666"
                        android:textSize="14sp"
                        />

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/fl_search_hot_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.nex3z.flowlayout.FlowLayout>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_mask_empty_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
