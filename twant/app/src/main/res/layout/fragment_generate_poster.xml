<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ftofs.twant.widget.Poster
        android:id="@+id/poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">
    </com.ftofs.twant.widget.Poster>

    <LinearLayout
        android:id="@+id/invitation_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="375:524"
                android:src="@drawable/distribution_promotion_poster">
            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_invitation_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/avatar_male"
                app:riv_border_color="@android:color/white"
                app:riv_border_width="2dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tv_invitation_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/img_invitation_avatar"
                app:layout_constraintTop_toTopOf="@id/img_invitation_avatar"
                app:layout_constraintBottom_toBottomOf="@id/img_invitation_avatar"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="Rico Kihn">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#FFF9F5">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="91dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快來逛逛吧！"
                        android:textSize="21sp"
                        android:textColor="#FA6400">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#868280"
                            android:textSize="14sp"
                            android:text="掃碼註冊">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FA6400"
                            android:textSize="18sp"
                            android:text="送好禮">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#868280"
                            android:textSize="14sp"
                            android:text="，聯繫客服領取">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_invitation_qr_code"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    android:src="@drawable/distribution_qr_code">
                </ImageView>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:background="@drawable/poster_footer_bg">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="原裝進口"
                    android:textSize="12sp"
                    android:textColor="@android:color/white">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="假一罰十"
                    android:textSize="12sp"
                    android:textColor="@android:color/white">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="包郵包稅"
                    android:textSize="12sp"
                    android:textColor="@android:color/white">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.ftofs.twant.widget.HwLoadingView
            android:layout_width="64dp"
            android:layout_height="64dp">
        </com.ftofs.twant.widget.HwLoadingView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="正在生成海報，請稍候...">

        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
