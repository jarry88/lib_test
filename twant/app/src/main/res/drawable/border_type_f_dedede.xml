<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
     類型A: 4條邊框都有
     類型B: 底邊框和右邊框
     類型C: 右邊框
     類型D: 底邊框
     類型E: 上邊框
     類型F: 上邊框和下邊框
     -->
    <item
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#dedede"/>
        </shape>
    </item>
</layer-list>
