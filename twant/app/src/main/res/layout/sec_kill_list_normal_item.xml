<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal">
    <!-- 背景 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:background="@drawable/bargain_list_normal_item_left_bg">

        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bargain_list_normal_item_right_bg">
        </View>
    </LinearLayout>
    <!-- END OF 背景 -->

    <!-- 實際內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginLeft="10dp">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历任国家计委投资司处长，国家开发银行综合计划局副局长，国家开发投资公司综合计划部主任"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:singleLine="true"
                    android:ellipsize="end">

                </TextView>

                <TextView
                    android:id="@+id/tv_goods_jingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="賣點：雙探頭非接觸測溫"
                    android:textColor="#929292"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:ellipsize="end">
                </TextView>

                <LinearLayout
                    android:id="@+id/ll_bargain_rank_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/avatar_female"
                        app:civ_border_color="@color/tw_slight_grey"
                        app:civ_border_width="1dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:translationX="-2dp"
                        android:src="@drawable/avatar_male"
                        app:civ_border_color="@color/tw_slight_grey"
                        app:civ_border_width="1dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:translationX="-4dp"
                        android:src="@drawable/avatar_female"
                        app:civ_border_color="@color/tw_slight_grey"
                        app:civ_border_width="1dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="砍價榜"
                        android:textSize="12sp"
                        android:textColor="@color/tw_yellow">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低可砍到的價格"
                    android:textSize="11sp"
                    android:textColor="#A2A1A1"
                    android:layout_marginTop="8dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_bottom_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$121.00"
                    android:textColor="@color/tw_red"
                    android:textSize="16sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_count_down_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="距活動開始"
                        android:textColor="#A2A1A1"
                        android:textSize="13sp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_count_down_day"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginRight="3dp"
                            android:textSize="12sp"
                            android:textColor="@color/tw_yellow"
                            android:text="0天"
                            android:gravity="center">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_count_down_hour"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:text="00"
                            android:gravity="center"
                            android:background="@drawable/yellow_r2dp_bg">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/tw_yellow">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_count_down_minute"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:text="00"
                            android:gravity="center"
                            android:background="@drawable/yellow_r2dp_bg">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/tw_yellow">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_count_down_second"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:text="00"
                            android:gravity="center"
                            android:background="@drawable/yellow_r2dp_bg">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!-- 多用途按鈕 -->
                <RelativeLayout
                    android:id="@+id/btn_versatile"
                    android:layout_width="80dp"
                    android:layout_height="24dp">
                    <!-- 背景 -->
                    <ImageView
                        android:id="@+id/img_versatile_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pink_button_80_24"
                        android:tint="@color/tw_red">

                    </ImageView>
                    <!-- 按鈕文字 -->
                    <TextView
                        android:id="@+id/tv_versatile_text"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="去砍價"
                        android:textSize="13sp"
                        android:textColor="@android:color/white">

                    </TextView>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- END OF 實際內容 -->
</RelativeLayout>
