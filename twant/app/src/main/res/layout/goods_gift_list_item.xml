<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="@dimen/toolbar_margin_left"
    android:layout_marginRight="@dimen/toolbar_margin_right">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/goods_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        app:riv_corner_radius="1dp"
        android:src="@drawable/cs_avatar_160"
        />

    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/expand_button"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/goods_image"
        android:layout_toLeftOf="@id/icon_expand"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yueaeow香薰精油"
            android:textColor="@color/tw_black"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_gift_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="(贈完為止) *1"
            android:textColor="@color/tw_black"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>
