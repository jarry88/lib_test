<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="15dp"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:riv_corner_radius="3dp"
            app:riv_border_color="@color/tw_light_grey"
            app:riv_border_width="1dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_goods_national_flag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            />
    </android.support.constraint.ConstraintLayout>
    <com.ftofs.twant.widget.StoreDesktop
        android:id="@+id/sd_desktop"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="12dp"
        android:background="@drawable/new_arrivals_pane_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/btn_goto_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bottom_separator_box">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_store_avatar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/cs_avatar_160"
                />
            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/img_store_avatar"
                android:layout_centerVertical="true"
                android:text="質簡生活館"
                android:textSize="13sp"
                android:textColor="@color/tw_black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_store_name"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/expand_button"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="客厅装饰品烛台蜡烛摆件"
            android:textColor="@color/tw_black"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_goods_jingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/tw_red"
            android:textSize="13sp"
            android:text="客厅装饰品烛台蜡烛摆件"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$ 129.00"
            android:textColor="@color/tw_red"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>
