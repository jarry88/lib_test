<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/border_type_d">

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="@string/text_post_detail"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_shop_menu"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_post_info_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_post_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="@dimen/toolbar_margin_left"
                            android:layout_marginEnd="@dimen/toolbar_margin_right"
                            android:text=""
                            android:textSize="21sp"
                            android:textColor="@color/tw_black"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="@dimen/toolbar_margin_left"
                            android:layout_marginEnd="@dimen/toolbar_margin_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_author_avatar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_nickname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:textColor="@color/tw_black"
                                        />
                                    <TextView
                                        android:id="@+id/tv_create_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#5B5B5B"
                                        android:textSize="12sp"
                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/btn_make_true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:text="想要成真"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:background="@drawable/small_yellow_button"
                                    android:layout_alignParentEnd="true"
                                    />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/icon_come_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="142dp"
                        android:layout_alignBottom="@id/ll_post_info_container"
                        android:translationY="10dp"
                        android:src="@drawable/yellow_want_to_true"
                        android:visibility="visible"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="@dimen/toolbar_margin_left"
                    android:layout_marginEnd="@dimen/toolbar_margin_right"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    />


                <com.ftofs.twant.widget.SquareGridLayout
                    android:id="@+id/sgl_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:sgl_column_count="3">
                </com.ftofs.twant.widget.SquareGridLayout>
                <!-- 商品 -->
                <LinearLayout
                    android:id="@+id/ll_post_goods_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="@dimen/toolbar_margin_left"
                    android:layout_marginEnd="@dimen/toolbar_margin_right"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/post_list_item_bg"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/post_goods_image"
                        android:layout_width="87.5dp"
                        android:layout_height="87.5dp"
                        android:src="@drawable/cs_avatar_160"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_post_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/tw_black"
                            android:text=""
                            android:maxLines="2"
                            android:ellipsize="end"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/tv_goods_price_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text=""
                                android:textSize="18sp"
                                android:textColor="@color/tw_red"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 店鋪 -->
                <LinearLayout
                    android:id="@+id/ll_post_store_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/toolbar_margin_left"
                    android:layout_marginRight="@dimen/toolbar_margin_right"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/post_list_item_bg"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/post_store_image"
                        android:layout_width="154dp"
                        android:layout_height="87dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_post_store_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/tw_black"
                            android:text=""
                            android:maxLines="2"
                            android:ellipsize="end"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/tv_store_signature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text=""
                                android:textSize="14sp"
                                android:textColor="@color/tw_dark_grey"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#B5B5B5"
                        />
                    <ImageView
                        android:id="@+id/icon_post_delete"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/length_15dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/icon_post_delete"/>
                </RelativeLayout>

                <!-- 分隔條 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/tw_light_grey_EDED"
                    />

                <TextView
                    android:id="@+id/tv_reply_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text=""
                    android:textColor="@color/tw_black"
                    android:textSize="16sp"
                    android:background="@drawable/border_type_d"
                    />

                <!-- 回覆區 -->
                <LinearLayout
                    android:id="@+id/ll_comment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/toolbar_margin_left"
                    android:layout_marginEnd="@dimen/toolbar_margin_right"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>


        </ScrollView>
        <!-- 底部工具欄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/border_type_e">
            <TextView
                android:id="@+id/btn_add_post_comment"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/input_package_no_bg"
                android:text="@string/input_post_comment_hint"
                android:textSize="16sp"
                android:textColor="#666"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btn_thumb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/img_thumb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_post_thumb_black"
                            />
                        <TextView
                            android:id="@+id/tv_thumb_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/tw_black"
                            android:text="0"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="#EEE"
                    />

                <RelativeLayout
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/img_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_post_like_black"
                            />
                        <TextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/tw_black"
                            android:text="0"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="#EEE"
                    />

                <RelativeLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_post_share"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/tw_black"
                            android:text="@string/text_share"
                            />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vw_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">
    </View>
</LinearLayout>

