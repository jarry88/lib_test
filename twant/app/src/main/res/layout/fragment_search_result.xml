<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 工具欄 -->
        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            >
            <com.ftofs.twant.widget.ScaledButton
                android:id="@+id/btn_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="7dp"
                android:layout_centerVertical="true"
                app:icon_src="@drawable/icon_back"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_container_bg">
                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_search"
                    />

                <FrameLayout
                    android:id="@+id/btn_clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_clear_all_circle"
                        />
                </FrameLayout>


                <EditText
                    android:id="@+id/et_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_search"
                    android:layout_toStartOf="@id/btn_clear_all"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:background="@null"
                    android:hint="@string/search_keyword_hint"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColorHint="@color/tw_medium_grey"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <!-- END OF 工具欄 -->

        <!-- 篩選欄 -->
        <LinearLayout
            android:id="@+id/ll_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_goods_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/btn_sort_goods_general"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_text_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tw_blue"
                        android:textSize="16sp"
                        android:text="@string/goods_tab_title_general"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_sort_goods_sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_text_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        android:text="@string/goods_tab_title_sale"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_sort_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        android:text="@string/goods_tab_title_price"
                        />
                    <ImageView
                        android:id="@+id/icon_price_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_text_price"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_sort_off"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_goods_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_text_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        android:text="@string/text_filter"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_text_filter"
                        android:layout_marginStart="3dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_filter"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_store_filter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/border_type_d"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/btn_follow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="關注"
                        android:textColor="@color/tw_black"
                        android:textSize="12sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_sort"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="綜合"
                            android:textColor="@color/tw_black"
                            android:textSize="12sp"
                            />

                        <ImageView
                            android:id="@+id/icon_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:src="@drawable/icon_filter_black_expand"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在地"
                            android:textColor="@color/tw_black"
                            android:textSize="12sp"
                            />

                        <ImageView
                            android:id="@+id/icon_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3.5dp"
                            android:src="@drawable/icon_filter_black_expand"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_biz_circle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_biz_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="商圈"
                            android:textColor="@color/tw_black"
                            android:textSize="12sp"
                            />

                        <ImageView
                            android:id="@+id/icon_biz_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3.5dp"
                            android:src="@drawable/icon_filter_black_expand"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/btn_recruitment"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_recruitment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="招聘"
                        android:textColor="@color/tw_black"
                        android:textSize="12sp"
                        />

                    <com.ftofs.twant.widget.ScaledButton
                        android:layout_marginStart="3.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon_src="@drawable/icon_black_square"
                        android:id="@+id/sb_recruitment"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_result_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F9F9F9">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_pagination_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/border_type_e"
            android:visibility="gone">
            <TextView
                android:id="@+id/btn_prev_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="上一頁"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                android:gravity="center"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/tw_light_grey_EDED"
                />
            <TextView
                android:id="@+id/btn_next_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="下一頁"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_float_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_publish_want_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_sendwant"
            />

        <ImageView
            android:id="@+id/btn_goto_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_goto_cart"
            />

        <ImageView
            android:id="@+id/btn_goto_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_goto_top_grey"
            />
    </LinearLayout>
</RelativeLayout>

