<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 日期 -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:text="2019-01-07"
        android:textSize="14sp"
        android:textColor="@color/tw_black"
        android:background="@drawable/footprint_date_bg"
        />

    <!-- 店名 -->
    <LinearLayout
        android:id="@+id/ll_store_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_shop"
            />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="Yueaeow香薰"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/expand_button"
            />
    </LinearLayout>

    <!-- 商品 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/cs_avatar_160"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                android:text="Yueaeow香薰精油香氛淡薰香家用室"
                />
            <TextView
                android:id="@+id/tv_goods_jingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/tw_dark_grey"
                android:textSize="14sp"
                android:text="澳洲制造 优选羊毛缝制"
                />
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/tw_red"
                android:textSize="14sp"
                android:text="$129.00"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>