<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3f3f3">

            <!-- 工具欄 -->
            <RelativeLayout
                android:id="@+id/tool_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_height"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bottom_separator_box_white">

                <com.ftofs.twant.widget.ScaledButton
                    android:id="@+id/btn_back"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    app:icon_src="@drawable/icon_back"
                    />

                <TextView
                    android:id="@+id/tv_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:text="@string/text_confirm_bill"
                    android:textColor="@color/tw_black"
                    />
            </RelativeLayout>

            <!-- 收貨地址 -->
            <LinearLayout
                android:id="@+id/ll_addr_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tool_bar"
                android:orientation="vertical"
                android:background="#fff">
                <RelativeLayout
                    android:id="@+id/btn_add_shipping_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/toolbar_margin_right"
                        android:layout_centerVertical="true"
                        android:text="@string/text_add_shipping_address"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black"
                        />
                    <com.ftofs.twant.widget.ScaledButton
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_marginRight="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:icon_src="@drawable/expand_button"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_blue_red_separator"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/blue_red_separator"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>


            <!-- 訂單主要信息 -->
            <LinearLayout
                android:id="@+id/ll_bill_main_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_addr_info"
                android:padding="15dp"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_shop"
                        />

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/expand_button"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/goods_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cs_avatar_160"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:textColor="@color/tw_black"
                                android:text="Yueaeow香薰精油香氛淡薰香家用室內臥室空氣清新留香"
                                />

                            <TextView
                                android:id="@+id/tv_total_sku_price"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="$129.00"
                                android:textSize="14sp"
                                android:textColor="@color/tw_black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:textColor="#929292"
                                android:text="类型:玫瑰, 规格:10ml, 颜色:黑色"
                                />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="X 1"
                                android:textSize="13sp"
                                android:textColor="#929292"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#e8e8e8"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/text_leave_message"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/text_leave_message_hint"
                        android:textSize="13sp"
                        android:textColor="@color/tw_black"
                        android:background="@null"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- END OF 訂單主要信息 -->

            <!-- 附加信息1 -->
            <LinearLayout
                android:id="@+id/ll_extra_info_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_bill_main_info"
                android:paddingLeft="@dimen/toolbar_margin_left"
                android:paddingRight="@dimen/toolbar_margin_right"
                android:background="#fff"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bottom_separator_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_receipt"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <ImageView
                        android:id="@+id/img_expand_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/expand_button"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img_expand_receipt"
                        android:text="不開發票"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bottom_separator_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_coupon"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <ImageView
                        android:id="@+id/img_expand_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/expand_button"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img_expand_coupon"
                        android:text="可用1張"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_shipping_time"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <LinearLayout
                        android:id="@+id/btn_change_shipping_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_shipping_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="工作日、雙休日、節假日均可送貨"
                            android:textColor="@color/tw_black"
                            android:textSize="13sp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/expand_button"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- END OF 附加信息1 -->

            <!-- 附加信息2 -->
            <LinearLayout
                android:id="@+id/ll_extra_info_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_extra_info_1"
                android:paddingLeft="@dimen/toolbar_margin_left"
                android:paddingRight="@dimen/toolbar_margin_right"
                android:orientation="vertical"
                android:background="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_pay_way"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <LinearLayout
                        android:id="@+id/btn_change_pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_pay_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="在線支付"
                            android:textColor="@color/tw_black"
                            android:textSize="13sp"
                            />

                        <ImageView
                            android:id="@+id/img_expand_pay_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/expand_button"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- END OF 附加信息2 -->

            <!-- 附加信息3 -->
            <LinearLayout
                android:id="@+id/ll_extra_info_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_extra_info_2"
                android:paddingLeft="@dimen/toolbar_margin_left"
                android:paddingRight="@dimen/toolbar_margin_right"
                android:orientation="vertical"
                android:background="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bottom_separator_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_goods_price"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="$129.90"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bottom_separator_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_freight"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="$8.00"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bottom_separator_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_store_discount"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="- $0.00"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_mall_discount"
                        android:textSize="14sp"
                        android:textColor="@color/tw_black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="- $0.00"
                        android:textColor="@color/tw_black"
                        android:textSize="13sp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <!-- END OF 附加信息3 -->
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <!-- 底部工具欄 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_separator_box_white">
        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="共1件, 合計:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_count"
            android:layout_centerVertical="true"
            android:text="$137.90"
            android:textColor="@color/tw_red"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="@string/text_commit_bill"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/narrow_red_button"
            />
    </RelativeLayout>
</LinearLayout>

