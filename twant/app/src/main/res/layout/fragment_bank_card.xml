<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/border_type_d">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            android:text="銀行信息"
            />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:gravity="center"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="@color/tw_blue">
        </TextView>
    </RelativeLayout>
    <!--  END OF 工具欄 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tw_slight_grey"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="身份信息"
            android:textColor="#CCC"
            android:textSize="14sp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border_type_d">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="銀行帳號名稱"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black">

                </TextView>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請填寫開戶人姓名"
                    android:textColor="@color/tw_black"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@null">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border_type_d">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="銀行卡帳號"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black">

                </TextView>
                <EditText
                    android:id="@+id/et_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請填寫銀行卡帳號"
                    android:textColor="@color/tw_black"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:background="@null">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="開戶行信息"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black">

                </TextView>
                <EditText
                    android:id="@+id/et_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請填寫開戶行名稱"
                    android:textColor="@color/tw_black"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@null">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
