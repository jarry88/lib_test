<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="177dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/tw_red">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_default_avatar"
            />

        <ImageView
            android:id="@+id/btn_message_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_message_bubble"
            />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_setting"
            />


        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="136dp"
            android:text="未登錄"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_mobile"
            android:layout_marginTop="136dp"
            android:src="@drawable/icon_vip"
            />
    </android.support.constraint.ConstraintLayout>

    <!-- 我的訂單 -->
    <RelativeLayout
        android:id="@+id/btn_my_bill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bottom_separator_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_bill"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/expand_button"
            />
    </RelativeLayout>

    <!-- 訂單狀態欄 -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/bill_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_my_bill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bottom_separator_box">
        <!-- 待支付 -->
        <RelativeLayout
            android:id="@+id/btn_to_be_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_to_be_shipped"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            >
            <ImageView
                android:id="@+id/icon_to_be_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_to_be_paid"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_to_be_paid"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/my_bill_to_be_paid"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />
        </RelativeLayout>


        <!-- 待發貨 -->
        <RelativeLayout
            android:id="@+id/btn_to_be_shipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_to_be_paid"
            app:layout_constraintRight_toLeftOf="@+id/btn_to_be_received"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/icon_to_be_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_to_be_sent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_to_be_sent"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/my_bill_to_be_sent"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <!-- 待收貨 -->
        <RelativeLayout
            android:id="@+id/btn_to_be_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_to_be_shipped"
            app:layout_constraintRight_toLeftOf="@+id/btn_to_be_commented"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/icon_to_be_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_to_be_received"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_to_be_received"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/my_bill_to_be_received"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <!-- 待評價 -->
        <RelativeLayout
            android:id="@+id/btn_to_be_commented"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_to_be_received"
            app:layout_constraintRight_toLeftOf="@+id/btn_return_or_exchange"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/icon_to_be_commented"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_to_be_commented"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_to_be_commented"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/my_bill_to_be_commented"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <!-- 退換貨 -->
        <RelativeLayout
            android:id="@+id/btn_return_or_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_to_be_commented"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/icon_return_or_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_return_or_exchange"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_return_or_exchange"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/my_bill_return_or_exchange"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>


    <!-- 我的優惠券 -->
    <RelativeLayout
        android:id="@+id/btn_my_coupon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bill_status_bar">
        <ImageView
            android:id="@+id/icon_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_coupon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_coupon"
            android:text="@string/my_coupon"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />
    </RelativeLayout>

    <!-- 我的關注 -->
    <RelativeLayout
        android:id="@+id/btn_my_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_my_coupon">
        <ImageView
            android:id="@+id/icon_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_follow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_follow"
            android:text="@string/my_follow"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />

    </RelativeLayout>

    <!-- 我的足跡 -->
    <RelativeLayout
        android:id="@+id/btn_my_footprint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_my_follow">
        <ImageView
            android:id="@+id/icon_footprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_footprint"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_footprint"
            android:text="@string/my_footprint"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />

    </RelativeLayout>

    <!-- 我的收貨地址 -->
    <RelativeLayout
        android:id="@+id/btn_my_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_my_footprint">
        <ImageView
            android:id="@+id/icon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_address"
            android:text="@string/my_address"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />

    </RelativeLayout>

    <!-- 我的積分 -->
    <RelativeLayout
        android:id="@+id/btn_my_bonus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_my_address">
        <ImageView
            android:id="@+id/icon_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_bonus"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_bonus"
            android:text="@string/my_bonus"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />

    </RelativeLayout>

    <!-- 我的信賴值 -->
    <RelativeLayout
        android:id="@+id/btn_my_trust_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_my_bonus">
        <ImageView
            android:id="@+id/icon_trust_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_trust_value"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/icon_trust_value"
            android:text="@string/my_trust_value"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>