<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@drawable/cross_border_main_content_bg">
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_banner_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="351:154">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Slogan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_cross_border_real">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="真實店鋪"
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="11sp">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_cross_border_best">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="真實交易"
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="11sp">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_cross_border_social">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="真實社交"
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="11sp">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- END OF Slogan -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:background="@drawable/white_r4dp_bg"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_nav_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rv_nav_list"
            app:piv_animationType="thinWorm"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="@color/tw_blue"
            app:piv_unselectedColor="@color/tw_light_grey_EDED"
            attrs:piv_padding="9dp"
            attrs:piv_radius="3dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 領取新人紅包，暫時不需要
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_receive_newbie_red_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="351:70"
            android:src="@drawable/img_receive_newbie_red_packet">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    -->

    <!-- 轉到購物專場 -->
    <LinearLayout
        android:id="@+id/ll_shopping_zone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">

    </LinearLayout>
    <!-- END OF 轉到購物專場 -->

    <!-- 砍價 -->
    <LinearLayout
        android:id="@+id/ll_bargain_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="幫忙砍價"
                    android:textColor="@color/tw_black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="大家都在砍價"
                    android:textSize="10sp"
                    android:textColor="#BBB">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_more_bargain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/expand_button">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bargain_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <!-- END OF 砍價 -->

    <!-- 拼團 -->
    <LinearLayout
        android:id="@+id/ll_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="一起來拼團"
                    android:textColor="@color/tw_black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="一起團購更划算"
                    android:textSize="10sp"
                    android:textColor="#BBB">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_more_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/expand_button">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_group_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <!-- END OF 拼團 -->

    <!-- 優選好店 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="優選好店"
                    android:textColor="@color/tw_black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="NEW"
                    android:textSize="10sp"
                    android:textColor="#BBB">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_more_best_store"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="進入專場"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/expand_button">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_store1_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80.35dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true">
                    <com.ftofs.twant.widget.StoreDesktop
                        android:layout_width="match_parent"
                        android:layout_height="6.65dp">
                    </com.ftofs.twant.widget.StoreDesktop>
                    <TextView
                        android:id="@+id/tv_store1_name"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="創薈軒有限公司"
                        android:textSize="10sp"
                        android:textColor="#666"
                        android:gravity="center"
                        android:background="@drawable/border_type_a">
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_store1_figure"
                    android:layout_width="147dp"
                    android:layout_height="83dp"
                    android:src="@drawable/del"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_store2_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80.35dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true">
                    <com.ftofs.twant.widget.StoreDesktop
                        android:layout_width="match_parent"
                        android:layout_height="6.65dp">
                    </com.ftofs.twant.widget.StoreDesktop>
                    <TextView
                        android:id="@+id/tv_store2_name"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="創薈軒有限公司"
                        android:textSize="10sp"
                        android:textColor="#666"
                        android:gravity="center"
                        android:background="@drawable/border_type_a">
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_store2_figure"
                    android:layout_width="147dp"
                    android:layout_height="83dp"
                    android:src="@drawable/del"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- END OF 優選好店 -->

    <!-- 為你推薦的標題欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/white_r4dp_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="為你推薦"
                    android:textColor="@color/tw_black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="HOT"
                    android:textSize="10sp"
                    android:textColor="#BBB">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_more_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="進入專場"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/expand_button">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- END OF 為你推薦 -->
    </LinearLayout>
</LinearLayout>

