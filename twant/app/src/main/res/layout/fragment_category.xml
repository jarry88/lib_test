<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/home_search_box_bg">
            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_search_home"
                />

            <FrameLayout
                android:id="@+id/btn_clear_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_clear_all_circle"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_clear_all"
                android:layout_toEndOf="@id/icon_search"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tw_blue"
                    android:textSize="@dimen/sp_14"
                    />
                <EditText
                    android:id="@+id/et_keyword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:background="@null"
                    android:hint="@string/input_search_keyword_hint"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColorHint="@color/tw_medium_grey"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!-- END OF 工具欄 -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/category_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:tabIndicatorColor="@color/tw_blue"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tw_black"
        app:tabTextColor="@color/tw_medium_grey"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/ll_category_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab_btn_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@color/tw_blue"
            android:text="商店">

        </TextView>
        <TextView
            android:id="@+id/tab_btn_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="產品"
            android:textColor="@android:color/white"
            android:background="@color/tw_blue">

        </TextView>
        <TextView
            android:id="@+id/tab_btn_post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="想要貼"
            android:textColor="@android:color/white"
            android:background="@color/tw_blue">

        </TextView>
    </LinearLayout>

    <!-- 展开更多历史记录的弹窗锚点 -->
    <View
        android:id="@+id/vw_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_category_tab"
        />

    <LinearLayout
        android:id="@+id/ll_search_history_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vw_anchor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F7F7F7"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_history_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        </androidx.recyclerview.widget.RecyclerView>
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_expand_history"
            android:layout_width="31dp"
            android:layout_height="31dp"
            app:icon_src="@drawable/icon_down_search_history">
        </com.ftofs.twant.widget.ScaledButton>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/category_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_search_history_container"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- 搜索建議 -->
    <LinearLayout
        android:id="@+id/ll_search_suggestion_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
        </LinearLayout>
        <!-- 蒙板 -->
        <LinearLayout
            android:id="@+id/ll_mask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/tw_mask_bg_color"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>