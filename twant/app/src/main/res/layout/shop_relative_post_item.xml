<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:padding="@dimen/dp_4"
    android:background="@drawable/border_type_d">
    <com.ftofs.twant.widget.ScaledButton
        android:id="@+id/btn_select"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:icon_src="@drawable/icon_cart_item_unchecked"
        />
    <LinearLayout
        android:layout_toEndOf="@id/btn_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/iv_goods_img"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/iv_goods_img"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2212"
                    android:textSize="15sp"
                    android:textColor="@color/tw_black"
                    android:lines="2"
                    android:ellipsize="end"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_author_avatar"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/avatar_female"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_author_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/tw_medium_grey"
                        android:text=""
                        />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!--瀏覽點讚收藏-->
            <LinearLayout
                android:id="@+id/ll_thumb_data_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_view"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_gery_look_post_mini"
                    />
                <TextView
                    android:id="@+id/tv_look_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text=""
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:id="@+id/icon_follow"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_grey_follow_post_small"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/tv_follow_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"

                    android:text=""
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_grey_like_post_mini"
                    />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"

                    android:text=""
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:id="@+id/icon_comment_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_grey_thumb_post_mini"
                    />

                <TextView
                    android:id="@+id/tv_thumb_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text=""
                    android:textColor="@color/tw_medium_grey"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1.5dp"
                    android:text="@string/text_unuseful"
                    android:background="@drawable/job_type_bg"
                    android:id="@+id/tv_unuseful"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="sss"
                android:textColor="@color/tw_grey"
                android:id="@+id/tv_create_time"/>
        </RelativeLayout>
        
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_post_true_small"
        android:layout_marginEnd="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/img_true_state"
        android:visibility="gone"/>
</RelativeLayout>