<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/tw_grey_F3F3"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/vw_indicator"
        android:layout_width="3dp"
        android:layout_height="29dp"
        android:background="@drawable/category_menu_indicator_bg"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_category_name_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            />
        <TextView
            android:id="@+id/tv_category_name_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="11sp"
            android:textColor="@color/tw_black"
            />
        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="11sp"
            android:textColor="@color/tw_black"
            android:src="@drawable/icon_eat_at_macon"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
