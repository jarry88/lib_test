<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_store_figure"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_store_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_store_figure"
        android:layout_alignTop="@id/img_store_figure"
        android:gravity="center"
        android:background="@drawable/store_class_bg"
        android:textSize="12sp"
        android:textColor="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />


    <RelativeLayout
        android:id="@+id/ll_store_title_container"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_left"
        android:layout_below="@id/img_store_figure"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FF676666"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_like_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF838383"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/tv_follow_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF838383"
                android:textSize="11sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
