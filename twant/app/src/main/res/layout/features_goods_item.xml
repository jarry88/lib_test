<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="218dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7.5dp"
    android:layout_marginRight="7.5dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:riv_corner_radius="3dp"
            app:riv_border_color="@color/tw_light_grey"
            app:riv_border_width="1dp"
            android:src="@drawable/cs_avatar_160"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.ftofs.twant.widget.StoreDesktop
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:text="$"
        android:background="@drawable/price_grey_bg"
        android:textSize="16sp"
        android:textColor="@color/tw_white"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@drawable/new_arrivals_pane_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vochain"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_goods_jingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="澳洲制造 优选羊毛缝制"
            android:textSize="15sp"
            android:textColor="#666"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
</LinearLayout>
