<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/btn_goto_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:id="@+id/ll_amount_container"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />

            <TextView
                android:id="@+id/tv_buy_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="right"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/goods_image"
            android:layout_toLeftOf="@id/ll_amount_container"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_goods_full_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text=""
                android:textColor="#929292"
                android:textSize="13sp"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginRight="@dimen/toolbar_margin_right">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_refund"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/text_refund_tab"
                android:textColor="@color/tw_black"
                android:textSize="13sp"
                android:background="@drawable/smaller_outline_button_revert"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/btn_view_refund"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/text_view_refund"
                android:textColor="@color/tw_black"
                android:textSize="13sp"
                android:background="@drawable/smaller_outline_button"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/btn_return"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/text_return_tab"
                android:textColor="@color/tw_black"
                android:textSize="13sp"
                android:background="@drawable/smaller_outline_button"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/btn_view_complaint"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/text_view_complaint"
                android:textColor="@color/tw_black"
                android:textSize="13sp"
                android:background="@drawable/smaller_outline_button_revert"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/btn_complain"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/text_complain_tab"
                android:textColor="@color/tw_black"
                android:textSize="13sp"
                android:background="@drawable/smaller_outline_button_revert"
                android:visibility="gone"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
