    <!-- 登入密碼 -->
    <RelativeLayout
        android:id="@+id/btn_login_password"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_type_d">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_login_password"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_login_password_hint"
                android:textColor="@color/tw_grey"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />


    </RelativeLayout>


    <!-- 手機修改 -->
    <RelativeLayout
        android:id="@+id/btn_change_mobile"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/btn_login_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_type_d"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/rv_change_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_change_mobile"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_change_mobile_hint"
                android:textColor="@color/tw_grey"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />
        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="138****8000"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/icon_expand"
            android:layout_alignTop="@id/rv_change_mobile"
            />

    </RelativeLayout>

    <!-- 支付密碼 -->
    <RelativeLayout
        android:id="@+id/btn_payment_password"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/btn_change_mobile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_type_d">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_payment_password"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_payment_password_hint"
                android:textColor="@color/tw_grey"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_button"
            />
    </RelativeLayout>

    <!-- 微信登錄設置 -->
    <RelativeLayout
        android:id="@+id/btn_wx_login_setting"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/btn_payment_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_type_d"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信綁定"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="綁定微信後，通過微信授權即可登入"
                android:textColor="@color/tw_grey"
                android:textSize="14sp"
                />
        </LinearLayout>

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_bind_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:kswBackColor="@color/switch_button_background_color"
            app:kswThumbColor="@color/tw_white"
            />

    </RelativeLayout>


    <!-- Facebook登錄設置 -->
    <RelativeLayout
        android:id="@+id/btn_fb_login_setting"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/btn_wx_login_setting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_type_d">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook綁定"
                android:textColor="@color/tw_black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="綁定Facebook後，通過Facebook授權即可登入"
                android:textColor="@color/tw_grey"
                android:textSize="14sp"
                />
        </LinearLayout>

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_bind_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:kswBackColor="@color/switch_button_background_color"
            app:kswThumbColor="@color/tw_white"
            />

    </RelativeLayout>


