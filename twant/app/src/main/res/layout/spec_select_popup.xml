<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_title_padding"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="0dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title_padding"
        android:orientation="horizontal"
        android:background="@drawable/title_padding_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sku_image"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            app:riv_corner_radius="10dp"
            app:riv_border_width="1dp"
            app:riv_border_color="#F1F1F1"
            android:background="@drawable/goods_image_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 商品描述容器 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/tw_red"
                    android:text=""
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_goods_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/tw_dark_grey"
                    android:text=""
                    />
                <!-- 限購 -->
                <TextView
                    android:id="@+id/tv_buy_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/tw_blue"
                    android:text=""
                    android:visibility="gone"
                    />
            </LinearLayout>

            <com.ftofs.twant.widget.ScaledButton
                android:id="@+id/btn_close"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="12dp"
                app:icon_src="@drawable/btn_close"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/vw_separator"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        android:background="@color/tw_light_grey"
        />

    <!-- 內容區 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vw_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:orientation="vertical">

                <!-- 規格列表容器 -->
                <LinearLayout
                    android:id="@+id/ll_spec_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/toolbar_margin_left"
                    android:layout_marginRight="@dimen/toolbar_margin_right"
                    android:orientation="vertical">
                </LinearLayout>

                <!-- 數量 -->
                <LinearLayout
                    android:id="@+id/ll_quantity_adjust_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/toolbar_margin_left"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tw_black"
                        android:textSize="14sp"
                        android:text="@string/text_quantity"
                        />

                    <!-- 調節按鈕 -->
                    <com.ftofs.twant.widget.AdjustButton
                        android:id="@+id/ab_quantity"
                        android:layout_width="100dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black"
                        android:background="@drawable/quantity_adjust_bg">
                    </com.ftofs.twant.widget.AdjustButton>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- END OF 內容區 -->
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="117dp"
            android:paddingRight="117dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="#FFF"
            android:background="@drawable/red_button"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
