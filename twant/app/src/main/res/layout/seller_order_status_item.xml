<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/vw_anchor"
            android:layout_width="15dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </View>

        <View
            android:id="@+id/vw_top_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/img_status_indicator"
            app:layout_constraintRight_toRightOf="@id/img_status_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_status_indicator"
            android:background="@color/tw_blue">
        </View>

        <ImageView
            android:id="@+id/img_status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/vw_anchor"
            app:layout_constraintRight_toRightOf="@id/vw_anchor"
            app:layout_constraintTop_toTopOf="@id/tv_order_status_desc"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_status_desc"
            android:src="@drawable/icon_checked">
        </ImageView>

        <View
            android:id="@+id/vw_bottom_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/img_status_indicator"
            app:layout_constraintRight_toRightOf="@id/img_status_indicator"
            app:layout_constraintTop_toBottomOf="@id/img_status_indicator"
            app:layout_constraintBottom_toBottomOf="@id/block2"
            android:background="@color/tw_blue">
        </View>

        <TextView
            android:id="@+id/tv_order_status_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="41dp"
            android:text="完成付款"
            android:textSize="15sp"
            android:textColor="@color/tw_black">
        </TextView>

        <LinearLayout
            android:id="@+id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_status_desc"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-02-30 17:17:23"
                android:textSize="13sp"
                android:textColor="#999999">
            </TextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
