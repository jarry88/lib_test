<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="-15dp"
    >
    <RelativeLayout
        android:id="@+id/rv_pay_card_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/pay_vendor_bg_orange">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_pay_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/tw_white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:id="@+id/ll_cashier_taifung_pay"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="top"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大豐銀行電子支付"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_pay_balance"
                    android:text="支持銀聯信用卡和大陸提款卡支付"
                    android:textColor="@color/tw_black"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:id="@+id/ll_cashier_mpay_pay"
                android:orientation="vertical"
                android:gravity="top"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MPay"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_pay_activity_indicator"
                    android:text=""
                    android:textColor="@color/tw_black"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:id="@+id/ll_cashier_alipay_pay"
                android:orientation="vertical"
                android:gravity="top"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付寶（内地）"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:id="@+id/ll_cashier_alipayHK_pay"
                android:orientation="vertical"
                android:gravity="top"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AlipayHK"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:id="@+id/ll_cashier_wechat_pay"
                android:orientation="vertical"
                android:gravity="top"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信（内地)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pay_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_balance_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想付錢包"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="(餘額：$0.00)"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>



        <ImageView
            android:id="@+id/mask_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_vendor_mask"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon_pay_activity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_mpay_activity_label"
            android:translationX="14dp"
            android:translationY="-12dp"
            android:visibility="gone" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_height="5dp"
        android:background="@drawable/card_shadow"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_height="12dp"
        android:background="@color/tw_white"/>
</LinearLayout>