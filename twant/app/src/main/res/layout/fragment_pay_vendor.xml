<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clipChildren="false">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_pay_vendor"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            />
    </RelativeLayout>
    <!-- END OF 工具欄 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tw_slight_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="26dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="64dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A8A8A8"
                        android:textSize="14sp"
                        android:text="MOP$"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#A8A8A8"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="16dp"
                    android:text="0.00"
                    android:textSize="40sp"
                    android:textColor="@color/tw_red"
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/second_monny_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_second_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A8A8A8"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:text="CNY¥"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#A8A8A8"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_second_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="0.00"
                    android:textSize="18sp"
                    android:textColor="@color/tw_black"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@drawable/pay_vendor_container_bg"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/permission_dp_15"
                android:id="@+id/top_view"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_view"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="85dp"
                android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:id="@+id/rv_pay_vendor_list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="0"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="@dimen/permission_dp_20"
                android:paddingTop="@dimen/permission_dp_15"
                />
            <LinearLayout
                android:id="@+id/btn_pay_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/tw_white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                >
                <LinearLayout
                    android:id="@+id/btn_express_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/permission_dp_20"
                    android:paddingEnd="@dimen/permission_dp_20"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/text_express_other_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/select_other_pay"
                        android:layout_margin="@dimen/dp_10"/>

                    <ImageView android:id="@+id/icon_express_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_pay_vendor_expand"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_up_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">
                    <ImageView android:id="@+id/icon_up_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_pay_up"
                        />

                    <TextView
                        android:id="@+id/text_up_other_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收起"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>





            <TextView
                android:id="@+id/btn_pay"
                android:layout_width="245dp"
                android:layout_height="44dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="去支付"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/red_button"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

