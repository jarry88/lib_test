<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <!-- 左邊 -->
    <LinearLayout
        android:id="@+id/ll_left_item_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/left_goods_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:riv_corner_radius="3dp"
                app:riv_border_color="@color/tw_light_grey"
                app:riv_border_width="1dp"
                />
        </android.support.constraint.ConstraintLayout>
        <com.ftofs.twant.widget.StoreDesktop
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/new_arrivals_pane_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_left_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_left_goods_jingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/tw_red"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_left_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/tw_red"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- 右邊 -->
    <LinearLayout
        android:id="@+id/ll_right_item_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/right_goods_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:riv_corner_radius="3dp"
                app:riv_border_color="@color/tw_light_grey"
                app:riv_border_width="1dp"
                />
        </android.support.constraint.ConstraintLayout>
        <com.ftofs.twant.widget.StoreDesktop
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/new_arrivals_pane_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_right_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_right_goods_jingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/tw_red"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_right_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/tw_red"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>