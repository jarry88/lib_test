<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="4dp">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <!-- 發布商品 -->
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_publish_goods"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@id/btn_back"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_circle_add"
            app:icon_width="21dp"
            app:icon_height="21dp"
            />
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_filter"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_filter"
            android:visibility="visible"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="41.5dp"
            android:layout_toRightOf="@id/btn_publish_goods"
            android:background="@drawable/seller_order_list_search_box_bg"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_search">
            </ImageView>
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="34dp"
                android:gravity="center_vertical"
                android:hint="請輸入商品名稱關鍵字"
                android:background="@null"
                android:textSize="13sp"
                android:textColor="@color/tw_black"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:singleLine="true">

            </EditText>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Tab欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border_type_d">
        <com.ftofs.twant.widget.SimpleTabButton
            android:id="@+id/tab_goods_in_sale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13sp"
            app:stb_text="出售中的商品"
            app:stb_stroke_width="2dp"
            app:stb_horizontal_padding="9dp"
            app:stb_use_cap="true">
        </com.ftofs.twant.widget.SimpleTabButton>
        <com.ftofs.twant.widget.SimpleTabButton
            android:id="@+id/tab_goods_in_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13sp"
            app:stb_text="倉庫中的商品"
            app:stb_stroke_width="2dp"
            app:stb_horizontal_padding="9dp"
            app:stb_use_cap="true">
        </com.ftofs.twant.widget.SimpleTabButton>
    </LinearLayout>
    <!-- END OF Tab欄 -->
    <com.ftofs.twant.widget.UnscrollableViewPager
        android:id="@+id/vp_page_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
