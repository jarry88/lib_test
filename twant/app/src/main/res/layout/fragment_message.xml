<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/border_type_d">

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            android:visibility="gone"
            />
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_contact"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_contact"
            />

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_switch_customer"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="43.5dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_switch_cs_chat"
            android:visibility="gone"
            />



        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="@string/text_message"
            android:textColor="@color/tw_black"
            />

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_message_menu"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginEnd="7dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:icon_width="15dp"
            app:icon_height="15dp"
            app:icon_src="@drawable/icon_circle_add">
        </com.ftofs.twant.widget.ScaledButton>

        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_message_search"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@id/btn_message_menu"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_shop_search">
        </com.ftofs.twant.widget.ScaledButton>
    </RelativeLayout>
    <!-- END OF 工具欄 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/ll_amount_container">
        <LinearLayout
            android:id="@+id/btn_transact_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_message_category_transact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_message_category_transact"
                    />

                <TextView
                    android:id="@+id/tv_transact_message_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_message_category_transact"
                    android:layout_marginStart="-15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/red_bubble_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="交易"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_asset_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_message_category_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_message_category_asset"
                    />
                <TextView
                    android:id="@+id/tv_asset_message_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_message_category_asset"
                    android:layout_marginStart="-15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/red_bubble_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="資產"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_social_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_message_category_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_message_category_social"
                    />
                <TextView
                    android:id="@+id/tv_social_message_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_message_category_social"
                    android:layout_marginStart="-15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/red_bubble_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="社交"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_bargain_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_message_category_bargain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_message_category_bargain"
                    />
                <TextView
                    android:id="@+id/tv_bargain_message_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_message_category_bargain"
                    android:layout_marginStart="-15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/red_bubble_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="促銷"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_notice_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_message_category_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_message_category_notice"
                    />
                <TextView
                    android:id="@+id/tv_notice_message_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_message_category_notice"
                    android:layout_marginStart="-15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/red_bubble_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="通知"
                android:textSize="14sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- 分隔條 -->
    <View
        android:id="@+id/vw_separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/tw_slight_grey"
        />

    <!-- 消息列表 -->
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/ll_message_list_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/tw_white">
        <com.ftofs.twant.widget.MaxHeightRecyclerView
            android:paddingBottom="@dimen/dp_40"
            android:id="@+id/rv_chat_conversation_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
        </com.ftofs.twant.widget.MaxHeightRecyclerView>
    </LinearLayout>

</LinearLayout>
