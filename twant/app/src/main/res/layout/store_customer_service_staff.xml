<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/toolbar_margin_left"
    android:layout_marginRight="@dimen/toolbar_margin_right"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.ftofs.twant.widget.StoreDesktop
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="4.5dp"
            android:layout_alignBottom="@id/ll_staff_pair_container">
        </com.ftofs.twant.widget.StoreDesktop>

        <LinearLayout
            android:id="@+id/ll_staff_pair_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_left_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_welcome_message_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="28dp"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:background="@drawable/icon_cs_message_bubble"
                    android:visibility="invisible"
                    />

                <LinearLayout
                    android:id="@+id/btn_init_cs_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="79dp"
                        android:layout_height="81dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_staff_avatar_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar_female"
                            />
                        <TextView
                            android:id="@+id/tv_staff_type_left"
                            android:layout_width="40dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="售前"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:background="@drawable/customer_service_type_indicator_bg_blue">
                        </TextView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_staff_name_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6.5dp"
                        android:text="艾米莉"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_right_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_welcome_message_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="28dp"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:text=""
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:background="@drawable/icon_cs_message_bubble"
                    android:visibility="invisible"
                    />

                <LinearLayout
                    android:id="@+id/btn_init_cs_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="79dp"
                        android:layout_height="81dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_staff_avatar_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar_female"
                            />
                        <TextView
                            android:id="@+id/tv_staff_type_right"
                            android:layout_width="40dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="售前"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:background="@drawable/customer_service_type_indicator_bg_blue">
                        </TextView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_staff_name_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6.5dp"
                        android:text="艾米莉"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="22.4dp"
        android:background="@drawable/new_arrivals_pane_bg">
    </View>
</LinearLayout>
