<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/fl_tab_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/tw_red">
        <TextView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_message"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/bottom_bar_title_home"
            android:textColor="#fff"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_home"
            app:layout_constraintRight_toRightOf="@id/btn_circle"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/bottom_bar_title_message"
            android:textColor="#fff"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_circle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_message"
            app:layout_constraintRight_toRightOf="@id/btn_cart"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/bottom_bar_title_circle"
            android:textColor="#fff"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_cart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_circle"
            app:layout_constraintRight_toRightOf="@id/btn_my"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/bottom_bar_title_cart"
            android:textColor="#fff"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_my"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_cart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/bottom_bar_title_my"
            android:textColor="#fff"
            android:gravity="center"
            />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>