<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bottom_separator_box">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            android:text="@string/receipt_info_fragment_title"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_receipt_header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="@string/text_receipt_header"
            />
        <EditText
            android:id="@+id/et_receipt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/input_receipt_header_hint"
            android:textSize="17sp"
            android:textColor="@color/tw_black"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_receipt_content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/ll_receipt_header_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="@string/text_receipt_content"
            />
        <EditText
            android:id="@+id/et_receipt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/input_receipt_content_hint"
            android:textSize="17sp"
            android:textColor="@color/tw_black"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_taxpayer_id_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintTop_toBottomOf="@id/ll_receipt_content_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tw_black"
            android:text="@string/text_taxpayer_id"
            />
        <EditText
            android:id="@+id/et_taxpayer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/input_taxpayer_id_hint"
            android:textSize="17sp"
            android:textColor="@color/tw_black"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_no_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="@string/text_does_not_need_receipt"
            android:textColor="@color/tw_black"
            android:textSize="14sp"
            android:background="@drawable/smaller_outline_button"
            />
        <TextView
            android:id="@+id/btn_save_and_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="@string/text_save_and_use"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/smaller_red_button"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>