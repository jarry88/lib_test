<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="575dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_popup_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_separator_box"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/tw_black"
                android:text="@string/text_promotion"
                />

            <com.ftofs.twant.widget.ScaledButton
                android:id="@+id/btn_dismiss"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                app:icon_src="@drawable/btn_close"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/btn_conform_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.ftofs.twant.widget.TwTabButton
                    android:id="@+id/ttb_conform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/text_conform_simplify"
                    android:textSize="16sp"
                    app:ttb_stroke_width="2dp"
                    app:ttb_use_cap="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_gift_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.ftofs.twant.widget.TwTabButton
                    android:id="@+id/ttb_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/text_gift"
                    android:textSize="16sp"
                    app:ttb_stroke_width="2dp"
                    app:ttb_use_cap="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>

