<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.PropertyVo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:paddingStart="@dimen/length_15dp"
        android:paddingEnd="@dimen/length_15dp"
        android:paddingTop="@dimen/length_15dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/margin_16dp"
            radius="@{2f}"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/house_img"
            app:layout_constraintTop_toTopOf="parent"
            imageUrl="@{vo.cover}"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/house_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
<!--                android:background="@{vo.saleType ==1?@color/tw_yellow:vo.saleType==2?@color/tw_red:@color/tw_blue}"-->

<!--                android:text="@{vo.saleType ==1?@string/rent:vo.saleType==2?@string/onsale:@string/onsale_rent,default=`出售`}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sale_tag"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                radius="@{3f}"
                    />
<!--                android:text="@{vo.detail,default =` 金峰南岸 高層 \r\n兩房兩廁1176呎 \r\n東南光猛 品味生活\r\n吉租 14000HKD \r\n\r\n何生63038005歡迎合作`}"-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tw_black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:lines="1"
                    android:ellipsize="end"
                />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vo.area,default =`路環島`}"
                    android:textSize="12sp"
                    android:textColor="@color/tw_black"
                    android:layout_marginEnd="10dp"
                    android:lines="1"/>
<!--                android:text="@{vo.intervalStoreRooms>0?String.valueOf(vo.intervalStoreRooms)+`舖`:``+vo.intervalRoom>0?String.valueOf(vo.intervalRoom)+`房`:``+vo.intervalHall>0?String.valueOf(vo.intervalHall)+`廳`:``+vo.intervalTerrace>0?String.valueOf(vo.intervalTerrace)+`露臺`:``+vo.intervalToilet>0?String.valueOf(vo.intervalToilet)+`厠`:`` ,default =`3舖5房8客廳6露臺7厠所`}"-->
<!--                android:text="@{String.valueOf(vo.buildingArea)+` 呎`,default =`385 呎`}"-->

                <TextView
                    android:id="@+id/room_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tw_black"
                    android:layout_marginEnd="10dp"

                android:lines="1"/>
<!--                android:text="@{vo.saleType==1?`$`+vo.rentalPrice+`元/月`:vo.saleType==2?`$`+vo.sellingPrice+`萬`:`售`+`$`+vo.sellingPrice+`萬`+`  `+`租`+`$`+vo.rentalPrice+`元/月`,default=`萬`}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tw_black"
                    android:layout_marginEnd="10dp"

                android:lines="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
<!--                                android:text="@{vo.isType==1?`住宅`:vo.isType==2?`商鋪`:vo.isType==3?`車位`:vo.isType==4?`工業`:vo.isType==5?`地皮`:vo.isType==6?`寫字樓`:vo.isType==7?`別墅`:``,default =`住宅`}"
-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tw_black"
                    android:layout_marginEnd="10dp"

                android:lines="1"/>
<!--                android:text="@{vo.editDate.length()>10?vo.editDate.substring(0,10):``,default =`2020-09-21`}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/tw_black"
                    android:layout_marginEnd="10dp"
                    android:lines="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/tw_red"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tw_light_grey_EDED"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
