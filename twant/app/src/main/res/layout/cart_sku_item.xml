<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:orientation="horizontal">
    <com.ftofs.twant.widget.ScaledButton
        android:id="@+id/btn_check_sku"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:icon_src="@drawable/icon_cart_item_unchecked"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:text=""
            android:maxLines="2"
            android:textColor="@color/tw_black"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_above="@id/ll_price_container">
            <TextView
                android:id="@+id/tv_goods_full_specs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123132"
                android:textColor="#FF929292"
                android:textSize="12sp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/icon_tariffEnable"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="10dp"
                android:visibility="invisible"
                android:textSize="16sp"
                android:src="@drawable/icon_among_city_with_text"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price_container"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:layout_above="@id/ll_gift_list_container"
            >
            <TextView
                android:id="@+id/tv_price_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:text="-"
                android:textColor="@color/tw_red"
                android:textSize="14sp"
                android:textStyle="normal"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            <com.ftofs.twant.widget.CartAdjustButton
                android:paddingBottom="1dp"
                android:id="@+id/ab_quantity"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <!-- 贈品列表 -->
        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/ll_gift_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
