<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftofs.twant.login.Title
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:title="登入後享受更多服務"
            app:login_info="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.ftofs.twant.login.PhoneView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_phone_view"
            app:layout_constraintTop_toBottomOf="@id/title"
            />
        <!-- 密碼 -->
        <RelativeLayout
            android:id="@+id/rl_password_container"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_phone_view"
            android:background="@drawable/border_type_d">
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:src="@drawable/icon_password"
                />

            <EditText
                android:id="@+id/et_password"
                android:layout_toEndOf="@id/icon_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:textColor="@color/tw_black"
                android:textColorHint="@color/tw_grey"
                android:hint="@string/input_password_hint_less"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_password_container">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/btn_password_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密碼"
                app:layout_constraintTop_toBottomOf="@id/rl_password_container"
                android:textSize="12sp"
                android:textColor="@color/tw_blue"
                android:paddingStart="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/rl_password_container"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/btn_password_login"
                android:layout_width="265dp"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/blue_button"
                android:text="@string/text_login_now"
                android:textSize="16sp"
                android:textColor="#fff"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:visibility="gone"
                    android:padding="5dp"
                    android:id="@+id/img_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_login_and_agree"
                    android:textColor="#CBCBCB"
                    android:textSize="12sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_view_tos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="《服務協議》"
                    android:textSize="12sp"
                    android:textColor="@color/tw_blue">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="與"
                    android:textColor="#CBCBCB"
                    android:textSize="12sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_view_private_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="《私隱條款》"
                    android:textSize="12sp"
                    android:textColor="@color/tw_blue">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <com.ftofs.twant.login.ThirdLogin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/thirdLogin_container"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>