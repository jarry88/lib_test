<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/toolbar_margin_left"
    android:layout_marginEnd="@dimen/toolbar_margin_right"
    android:paddingBottom="@dimen/dp_4"
    android:paddingTop="@dimen/dp_4"
    android:background="@drawable/border_type_d">
    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/expand_button_big">
    </ImageView>
    <TextView
        android:id="@+id/tv_announcement_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/icon_expand"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/tw_black"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_announcement_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/icon_expand"
        android:layout_below="@id/tv_announcement_title"
        android:text=""
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        />
</RelativeLayout>
