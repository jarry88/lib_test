<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ftofs.twant.widget.NestedScrollingParent2Layout
        android:id="@+id/scrolling_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <RelativeLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="23dp"
            android:paddingBottom="0dp">
            <ImageView
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_takewant"
                />
        </RelativeLayout>

        <!-- 搜索框 -->
        <LinearLayout
            android:id="@+id/sticky_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_search_box"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/toolbar_margin_left"
                android:layout_marginRight="@dimen/toolbar_margin_right"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/home_search_box_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_search_home"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="想要成真 Take Want Become True"
                    android:textSize="16sp"
                    android:textColor="@color/tw_grey"
                    />
                <ImageView
                    android:id="@+id/btn_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/icon_category"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:background="@color/tw_blue">
                <RelativeLayout
                    android:id="@+id/btn_category_store"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_category_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="想要店"
                            android:textSize="17sp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOP"
                            android:textSize="8sp"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_store_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_category_store"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="-7dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/red_bubble_bg"
                        android:gravity="center"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_category_goods"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_category_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="想要品"
                            android:textSize="17sp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRODUCT"
                            android:textSize="8sp"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_goods_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_category_goods"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="-7dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/red_bubble_bg"
                        android:gravity="center"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_category_brand"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_category_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="想要圈"
                            android:textSize="17sp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TAKEWANT"
                            android:textSize="8sp"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_post_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_category_post"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="-7dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/red_bubble_bg"
                        android:gravity="center"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/btn_goto_double_eleven"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/icon_double_eleven_entrance"
                        android:layout_width="89dp"
                        android:layout_height="34.5dp"
                        android:src="@drawable/icon_double_eleven_entrance"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 輪播圖 -->
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/carousel_container"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="16:9">
                        <com.zhouwei.mzbanner.MZBannerView
                            android:id="@+id/banner_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:open_mz_mode="false"
                            app:canLoop="true"
                            />
                    </RelativeLayout>
                </android.support.constraint.ConstraintLayout>


                <!-- 真實、社交、優選 -->
                <RelativeLayout
                    android:id="@+id/rl_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/tw_blue">
                    <View
                        android:id="@+id/vw_slogan_highlighter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/tw_red"
                        android:visibility="invisible"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/icon_slogan_real"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="真實信息"
                                        android:textSize="14sp"
                                        android:textColor="#FFF"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Real Info"
                                        android:textSize="10sp"
                                        android:textColor="#FFF"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/icon_slogan_best"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="真實交易"
                                        android:textSize="14sp"
                                        android:textColor="#FFF"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Real Trade"
                                        android:textSize="10sp"
                                        android:textColor="#FFF"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/icon_slogan_social"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="真實社交"
                                        android:textSize="14sp"
                                        android:textColor="#FFF"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Real Social"
                                        android:textSize="10sp"
                                        android:textColor="#FFF"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_new_arrivals_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="21sp"
                        android:textColor="@color/tw_black"
                        android:text="最&#8197;新&#8197;想&#8197;要&#8197;店"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="10sp"
                        android:textColor="@color/tw_black"
                        android:text="N E W   A R R I V A L S"
                        android:gravity="center"
                        />
                </LinearLayout>

                <!-- 最新入駐店鋪列表 -->
                <LinearLayout
                    android:id="@+id/ll_new_arrivals_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <!-- 這個View防止底部導航條擋住內容區 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottom_toolbar_max_height"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.ftofs.twant.widget.NestedScrollingParent2Layout>

    <LinearLayout
        android:id="@+id/ll_float_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_add_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_add_feedback"
            />

        <ImageView
            android:id="@+id/btn_goto_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_goto_top_grey"
            />
    </LinearLayout>
</RelativeLayout>
