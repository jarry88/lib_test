<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.ftofs.twant.kotlin.ImGoodsViewModel" />
        <variable
            name="categoryAdapter"
            type="com.ftofs.twant.adapter.ZoneCategoryListAdapter" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/rl_title_wight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/rl_title_container" />
        <!--            style="@style/Widget.MaterialComponents.TabLayout.Colored"-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabIndicatorColor="@color/tw_blue"
            app:layout_constraintTop_toBottomOf="@+id/rl_title_container"
            app:tabPaddingTop="4dp"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextColor="@color/tw_black"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tw_grey_F3F3"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_container"
            app:layout_constraintTop_toBottomOf="@+id/rl_title_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:background="@color/tw_white">
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/recyclerView2"
                android:layout_width="wrap_content"
                android:minWidth="90dp"
                android:layout_height="match_parent"
                tools:listitem="@layout/store_category_list_item"
                binding:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rv_zone_category"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/dp_90"
                android:layout_height="wrap_content"
                app:adapter="@{categoryAdapter}"
                tools:listitem="@layout/store_category_list_item"
                binding:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_right_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.65"
                    binding:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/zone_goods_list_item" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
