<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="horizontal">
    <com.ftofs.twant.widget.ScaledButton
        android:id="@+id/btn_check_sku"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:icon_src="@drawable/icon_cart_item_unchecked"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/tw_black"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_goods_full_specs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="12316454654545454646546546546546546545654654654654564654545645645"
                android:textColor="#FF929292"
                android:textSize="12sp"
                />
            <ImageView
                android:id="@+id/cross_border_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:src="@drawable/icon_among_city_with_text">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/tv_price_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:text="5131321"
                android:textColor="@color/tw_red"
                android:textSize="14sp"
                android:textStyle="normal"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            <com.ftofs.twant.widget.CartAdjustButton
                android:id="@+id/ab_quantity"
                android:layout_centerVertical="true"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="@color/tw_black"
                />
        </LinearLayout>

        <!-- 贈品列表 -->
        <LinearLayout
            android:id="@+id/ll_gift_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
