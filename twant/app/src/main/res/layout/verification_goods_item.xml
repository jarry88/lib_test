<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vo"
            type="com.ftofs.twant.vo.orders.OrdersGoodsVo"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/ll_swipe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/goods_image"
                app:imageUrl="@{vo.imageSrc}"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tw_black"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{vo.goodsFullSpecs}">

                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/tv_spu_id"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@{vo.goodsFullSpecs}"

                        android:textSize="13sp">
                    </TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tw_black"
                        android:text="@string/text_avaliable"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        />
                    <com.ftofs.twant.widget.CartAdjustButton
                        android:id="@+id/ab_quantity"
                        android:layout_width="92dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/btn_cancel_after_verification"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_26"
                        android:gravity="center"
                        android:text="@string/text_cancel_after_verification"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_button"

                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>