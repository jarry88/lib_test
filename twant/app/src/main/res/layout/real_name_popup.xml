<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/real_name_popup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="實名登記"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_centerInParent="true">

        </TextView>
        
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_dismiss"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/btn_close_popup">
        </com.ftofs.twant.widget.ScaledButton>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:text="應海關要求，購買境外商品需提供與實名信息一致的訂購人、收貨人實名信息。"
            android:textColor="#333">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/grey_dot">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="若信息不一致則無法通過海關驗證，包裹無法正常發出，延長配送時效。"
                android:textSize="14sp"
                android:textColor="#999">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/real_name_edit_bg">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black">
                </TextView>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/btn_clear_name"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:textColorHint="#FFBBB7BB"
                    android:hint="請填寫收件人的姓名"
                    android:background="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:singleLine="true">
                </EditText>

                <FrameLayout
                    android:id="@+id/btn_clear_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_clear_all_circle">
                    </ImageView>
                </FrameLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/toolbar_margin_left"
                android:layout_marginRight="@dimen/toolbar_margin_right"
                android:background="#FFE6E6E6">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="身份證號碼"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black">
                </TextView>

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/btn_clear_id"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black"
                    android:textColorHint="#FFBBB7BB"
                    android:hint="請填寫收件人的身份證號碼"
                    android:background="@null"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:singleLine="true">
                </EditText>

                <FrameLayout
                    android:id="@+id/btn_clear_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_clear_all_circle">
                    </ImageView>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">
            <LinearLayout
                android:id="@+id/btn_view_real_name_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/icon_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_info">
                </ImageView>

                <TextView
                    android:id="@+id/tv_real_name_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="實名登記說明"
                    android:textColor="#999">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/btn_view_real_name_prompt"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_button_210_39"
                android:gravity="center"
                android:text="提交"
                android:textSize="16sp"
                android:textColor="@android:color/white">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
