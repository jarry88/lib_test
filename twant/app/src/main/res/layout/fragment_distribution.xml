<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!-- 工具欄 -->
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/border_type_d">
        <com.ftofs.twant.widget.ScaledButton
            android:id="@+id/btn_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            app:icon_src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/tw_black"
            android:text="我的團隊"
            />
    </RelativeLayout>
    <!--  END OF 工具欄 -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tw_slight_grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_r4dp_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="101dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推介收益（澳門幣）"
                            android:textSize="15sp"
                            android:textColor="@color/tw_black">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_total_comission_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="16sp"
                            android:textColor="#6B6B6B"
                            android:text="MOP 0.00">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_show_qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/distribution_qr_code">
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="推介二維碼">

                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tw_light_grey">

                </View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="101dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_unpaid_commission_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可提現金額：0.00元"
                            android:textColor="#717171"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:textColor="#717171"
                            android:textSize="14sp">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_withdraw"
                        android:layout_width="76dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:text="提現"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:background="@drawable/blue_button_75_25"
                        android:gravity="center">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_team_toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="vertical"
                android:background="@drawable/white_r4dp_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="87dp">
                    <FrameLayout
                        android:id="@+id/btn_promotion_goods"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/ic_distribution_promotion_goods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_distribution_promotion_goods">
                            </ImageView>
                            <TextView
                                android:id="@+id/tv_promotion_goods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="推介商品"
                                android:textSize="12sp"
                                android:textColor="@color/tw_blue">

                            </TextView>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/btn_my_team"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/ic_distribution_my_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_distribution_my_team"
                                app:tint="@color/tw_black_grey">
                            </ImageView>
                            <TextView
                                android:id="@+id/tv_my_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="我的團隊"
                                android:textSize="12sp"
                                android:textColor="@color/tw_black">

                            </TextView>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/btn_promoting_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/ic_distribution_promoting_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_distribution_promoting_order"
                                app:tint="@color/tw_black_grey">
                            </ImageView>
                            <TextView
                                android:id="@+id/tv_promoting_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="推介訂單"
                                android:textSize="12sp"
                                android:textColor="@color/tw_black">

                            </TextView>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/btn_withdraw_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/ic_distribution_withdraw_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_distribution_withdraw_record"
                                app:tint="@color/tw_black_grey">
                            </ImageView>
                            <TextView
                                android:id="@+id/tv_withdraw_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="提現紀錄"
                                android:textSize="12sp"
                                android:textColor="@color/tw_black">

                            </TextView>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tw_light_grey">
                </View>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 推介商品Tab -->
                    <FrameLayout
                        android:id="@+id/promotion_goods_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="商品名稱"
                            android:textSize="12sp"
                            android:textColor="@color/tw_black">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="72dp"
                            android:layout_gravity="center_vertical|end"
                            android:text="佣金/比例"
                            android:textSize="12sp"
                            android:textColor="@color/tw_black">
                        </TextView>
                        <TextView
                            android:id="@+id/btn_share_multiple"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical|end"
                            android:gravity="center"
                            android:text="分享"
                            android:textSize="12sp"
                            android:textColor="@color/tw_black">
                        </TextView>
                    </FrameLayout>
                    <!-- END OF 推介商品Tab -->

                    <!-- 我的團隊Tab -->
                    <LinearLayout
                        android:id="@+id/my_team_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="全部"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_first_level"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="一級"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_second_level"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="二級"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                    </LinearLayout>
                    <!-- END OF 我的團隊Tab -->

                    <!-- 推介訂單Tab -->
                    <LinearLayout
                        android:id="@+id/promoting_order_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_promoting_order_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="全部"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_promoting_order_ongoing"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="進行中"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_promoting_order_finished"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="已完成"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_promoting_order_canceled"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="已取消"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                    </LinearLayout>
                    <!-- END OF 推介訂單Tab -->

                    <!-- 提現記錄Tab -->
                    <LinearLayout
                        android:id="@+id/withdraw_record_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_withdraw_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="全部"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_withdraw_unprocessed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="未處理"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_withdraw_success"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="提現成功"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                        <com.ftofs.twant.widget.SimpleTabButton
                            android:id="@+id/stb_withdraw_fail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:stb_text="提現失敗"
                            app:stb_text_size="12sp">
                        </com.ftofs.twant.widget.SimpleTabButton>
                    </LinearLayout>
                    <!-- END OF 提現記錄Tab -->
                </LinearLayout>
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp">
            </androidx.viewpager.widget.ViewPager>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
