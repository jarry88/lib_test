<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="@dimen/toolbar_margin_left"
    android:layout_marginRight="@dimen/toolbar_margin_right"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_left_container"
        android:layout_width="133.5dp"
        android:layout_height="120.5dp"
        android:background="@drawable/yellow_voucher">

        <LinearLayout
            android:id="@+id/ll_price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_currency_type_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#fff"
                android:text="$"
                />
            <TextView
                android:id="@+id/tv_template_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="#fff"
                android:text="50"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_limit_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_below="@id/ll_price_container"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="滿100減50"
            />

        <TextView
            android:id="@+id/tv_usage_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_limit_amount_text"
            android:layout_centerHorizontal="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="13.5dp"
            android:paddingRight="13.5dp"
            android:text="店舖專用"
            android:textColor="@color/tw_yellow"
            android:background="@android:color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120.5dp"
        android:layout_weight="1"
        android:background="@drawable/coupon_bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_coupon_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/app_logo"
                />
            <TextView
                android:id="@+id/tv_usable_client_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="(PC尊享)"
                android:textSize="13sp"
                android:textColor="#FF676666"
                />
            <TextView
                android:id="@+id/tv_valid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="5dp"
                android:text="有效期: 2018.12.20 - 2019.1.20"
                android:textSize="13sp"
                android:textColor="#FF676666"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_voucher_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
