<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/toolbar_margin_left"
    android:layout_marginEnd="@dimen/toolbar_margin_right"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/border_type_d">
    <com.ftofs.twant.widget.ScaledButton
        android:id="@+id/btn_select"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:icon_src="@drawable/icon_cart_item_unchecked"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/btn_select"
        android:orientation="horizontal"
        android:background="@drawable/border_type_d">
        <!-- 通用的城友列表 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_female"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/tw_light_grey_EDED"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老沙"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    />
                <TextView
                    android:id="@+id/tv_member_level"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    android:text="V8城友"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/member_level_bg"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_member_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="你們說的對"
                android:textSize="14sp"
                android:textColor="@color/tw_dark_grey"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>