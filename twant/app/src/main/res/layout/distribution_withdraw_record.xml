<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:orientation="vertical"
    android:background="@drawable/white_r4dp_bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提現"
                    android:textSize="14sp"
                    android:textColor="@color/tw_black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="+100.00"
                    android:textSize="14sp"
                    android:textColor="@color/tw_red">
                </TextView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.02.20 12:00:01"
                    android:textSize="11sp"
                    android:textColor="@color/tw_medium_grey">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="提現成功"
                    android:textSize="11sp"
                    android:textColor="@color/tw_medium_grey">
                </TextView>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_withdraw_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:background="@drawable/border_type_e">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提現方式"
                android:textColor="@color/tw_black"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="轉入銀行卡"
                android:textColor="@color/tw_black"
                android:textSize="12sp">

            </TextView>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_withdraw_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="提現進度"
                android:textSize="12sp"
                android:textColor="@color/tw_black">
            </TextView>

            <ImageView
                android:id="@+id/img_progress_ind_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="103dp"
                app:layout_constraintTop_toTopOf="@id/tv_withdraw_progress"
                app:layout_constraintBottom_toBottomOf="@id/tv_withdraw_progress"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/blue_r6dp_circle">
            </ImageView>

            <ImageView
                android:id="@+id/img_progress_ind_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                app:layout_constraintTop_toTopOf="@id/img_progress_ind_apply"
                app:layout_constraintBottom_toBottomOf="@id/img_progress_ind_apply"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/blue_r6dp_circle">
            </ImageView>

            <ImageView
                android:id="@+id/img_progress_ind_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_progress_ind_apply"
                app:layout_constraintBottom_toBottomOf="@id/img_progress_ind_apply"
                app:layout_constraintStart_toEndOf="@id/img_progress_ind_apply"
                app:layout_constraintEnd_toStartOf="@id/img_progress_ind_arrive"
                android:src="@drawable/blue_r6dp_circle">
            </ImageView>
            
            <View
                android:id="@+id/vw_indicator_line_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="@id/img_progress_ind_apply"
                app:layout_constraintBottom_toBottomOf="@id/img_progress_ind_apply"
                app:layout_constraintStart_toEndOf="@id/img_progress_ind_apply"
                app:layout_constraintEnd_toStartOf="@id/img_progress_ind_audit"
                android:background="@color/gray_cc">
            </View>
            <View
                android:id="@+id/vw_indicator_line_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="@id/img_progress_ind_apply"
                app:layout_constraintBottom_toBottomOf="@id/img_progress_ind_apply"
                app:layout_constraintStart_toEndOf="@id/img_progress_ind_audit"
                app:layout_constraintEnd_toStartOf="@id/img_progress_ind_arrive"
                android:background="@color/gray_cc">
            </View>

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/img_progress_ind_apply"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_apply"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_apply"
                android:text="申請"
                android:textColor="@color/tw_black"
                android:textSize="11sp">
            </TextView>
            <TextView
                android:id="@+id/tv_time_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_apply"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_apply"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_apply"
                android:text="09.01 22:03"
                android:textSize="10sp"
                android:textColor="@color/tw_black">
            </TextView>

            <TextView
                android:id="@+id/tv_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/img_progress_ind_audit"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_audit"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_audit"
                android:text="審核"
                android:textColor="@color/tw_black"
                android:textSize="11sp">
            </TextView>
            <TextView
                android:id="@+id/tv_time_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_audit"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_audit"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_audit"
                android:text="09.01 22:04"
                android:textSize="10sp"
                android:textColor="@color/tw_black">
            </TextView>

            <TextView
                android:id="@+id/tv_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/img_progress_ind_arrive"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_arrive"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_arrive"
                android:text="到賬"
                android:textColor="@color/tw_black"
                android:textSize="11sp">
            </TextView>
            <TextView
                android:id="@+id/tv_time_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_arrive"
                app:layout_constraintStart_toStartOf="@id/img_progress_ind_arrive"
                app:layout_constraintEnd_toEndOf="@id/img_progress_ind_arrive"
                android:text="09.01 22:04"
                android:textSize="10sp"
                android:textColor="@color/tw_black">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_withdraw_sn_container"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:background="@drawable/border_type_e">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="提現單號"
            android:textColor="@color/tw_black"
            android:textSize="12sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="4246546123544645123"
            android:textColor="@color/tw_black"
            android:textSize="11sp">
        </TextView>
    </FrameLayout>
</LinearLayout>
