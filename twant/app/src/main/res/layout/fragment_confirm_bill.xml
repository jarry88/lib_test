<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tw_slight_grey">
    <!-- 工具欄和地址信息欄 -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <!-- 工具欄 -->
        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bottom_separator_box_white">

            <com.ftofs.twant.widget.ScaledButton
                android:id="@+id/btn_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                app:icon_src="@drawable/icon_back"
                />

            <TextView
                android:id="@+id/tv_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="@string/text_confirm_bill"
                android:textColor="@color/tw_black"
                />
        </RelativeLayout>

        <!-- 收貨地址 -->
        <LinearLayout
            android:id="@+id/ll_addr_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tool_bar"
            android:orientation="vertical"
            android:background="#fff">
            <!-- 新增收貨地址 -->
            <RelativeLayout
                android:id="@+id/btn_add_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="23dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/toolbar_margin_right"
                    android:layout_centerVertical="true"
                    android:text="@string/text_add_shipping_address"
                    android:textSize="16sp"
                    android:textColor="@color/tw_black"
                    />
                <com.ftofs.twant.widget.ScaledButton
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginRight="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:icon_src="@drawable/expand_button"
                    />
            </RelativeLayout>

            <!-- 切換收貨地址 -->
            <LinearLayout
                android:id="@+id/btn_change_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:textColor="@color/tw_black"
                        android:text=""
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_shop_location"
                        />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/tw_dark_grey"
                        android:textSize="13sp"
                        android:text=""
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/expand_button"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- 門店自提信息填寫 -->
            <LinearLayout
                android:id="@+id/ll_self_fetch_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginLeft="@dimen/toolbar_margin_left"
                android:layout_marginRight="@dimen/toolbar_margin_right"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/self_fetch_hint"
                    android:textColor="@color/tw_blue"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/self_fetcher"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/tw_black"
                        android:textSize="16sp"
                        />

                    <EditText
                        android:id="@+id/et_self_fetch_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_mobile_short"
                            android:textColor="@color/tw_black"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/tw_black"
                            android:textSize="16sp"
                            />

                        <EditText
                            android:id="@+id/et_self_fetch_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:imeOptions="actionDone"
                            android:background="@null"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_change_self_fetch_mobile_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_self_fetch_mobile_zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/tw_red"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/expand_button_red"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_blue_red_separator"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blue_red_separator"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <!-- END OF 工具欄和地址信息欄 -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_store_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>

    <!-- 底部工具欄 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_separator_box_white">
        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_count"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/tw_red"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="@string/text_commit_bill"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/narrow_red_button"
            />
    </RelativeLayout>
</LinearLayout>

