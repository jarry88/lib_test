<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">
    <View
        android:id="@+id/img_cover_bg1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#E6E6E6"
        android:layout_marginStart="@dimen/margin12"
        android:layout_marginEnd="@dimen/margin12"
        />
    <View
        android:id="@+id/img_cover_bg2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#CFCFCF"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ftofs.twant.widget.StoreDesktop
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingBottom="8dp"
        android:paddingTop="1dp"
        android:background="@drawable/new_arrivals_pane_bg">
        <TextView
            android:id="@+id/tv_shop_parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="1"
            android:textColor="#525556"
            android:layout_marginEnd="@dimen/margin8"
            />
        <LinearLayout
            android:id="@+id/tv_category_name_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_shop_parent_name"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shop_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525556"
                android:textSize="12sp"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_commodity_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/tw_dark_grey"
                android:textSize="10sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
