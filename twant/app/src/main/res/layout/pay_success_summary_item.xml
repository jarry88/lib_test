<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="240dp"
    android:background="@color/tw_blue"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_pay_success_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_pay_success"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="@string/text_pay_success"
            android:textColor="#fff"
            android:textSize="21sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="23sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_pay_success_mpay_activity_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/pay_success_mpay_activity_indicator_bg"
            android:text="獲得99元優惠券一張"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_pay_success_store_coupon_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/pay_success_mpay_activity_indicator_bg"
            android:text="收到1張店鋪券"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="33dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_goto_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_goto_home"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/outline_button_down"
            />
        <TextView
            android:id="@+id/btn_view_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/text_view_order"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/outline_button_up"
            />
    </LinearLayout>
</LinearLayout>
