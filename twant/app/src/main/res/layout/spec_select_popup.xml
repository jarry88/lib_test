<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mobile_zone_popup_bg"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/rl_title_container"
        android:layout_width="0dp"
        android:layout_height="81dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bottom_separator_box">
        <ImageView
            android:id="@+id/sku_image"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_close"
            />
    </RelativeLayout>

    <!-- 規格列表容器 -->
    <LinearLayout
        android:id="@+id/ll_spec_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        android:layout_marginRight="@dimen/toolbar_margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_title_container"
        android:orientation="vertical">


    </LinearLayout>

    <!-- 數量 -->
    <LinearLayout
        android:id="@+id/ll_quantity_adjust_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_margin_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_spec_container"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/tw_black"
            android:textSize="14sp"
            android:text="@string/text_quantity"
            />

        <!-- 調節按鈕 -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/quantity_adjust_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/tw_black"
                android:text="1"
                />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/ll_quantity_adjust_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="117dp"
        android:paddingRight="117dp"
        android:text="@string/ok"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:background="@drawable/red_button"
        />
</android.support.constraint.ConstraintLayout>


