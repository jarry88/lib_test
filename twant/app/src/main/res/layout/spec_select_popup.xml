<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_title_padding"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="0dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title_padding"
        android:orientation="horizontal"
        android:background="@drawable/title_padding_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sku_image"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 商品描述容器 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/tw_red"
                    android:text="$195.50"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/tw_dark_grey"
                    android:text="( 庫存: 100瓶 )"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/btn_close"
                />
        </RelativeLayout>
    </LinearLayout>

    <!-- 內容區 -->
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        android:paddingBottom="25dp"
        android:background="@drawable/spec_select_popup_content_bg"
        android:orientation="vertical">

        <!-- 規格列表容器 -->
        <LinearLayout
            android:id="@+id/ll_spec_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            android:orientation="vertical">
        </LinearLayout>

        <!-- 數量 -->
        <LinearLayout
            android:id="@+id/ll_quantity_adjust_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tw_black"
                android:textSize="14sp"
                android:text="@string/text_quantity"
                />

            <!-- 調節按鈕 -->
            <com.ftofs.twant.widget.AdjustButton
                android:id="@+id/ab_quantity"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/tw_black"
                android:background="@drawable/quantity_adjust_bg">
            </com.ftofs.twant.widget.AdjustButton>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="117dp"
            android:paddingRight="117dp"
            android:text="@string/ok"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:background="@drawable/red_button"
            />
    </LinearLayout>
    <!-- END OF 內容區 -->
</android.support.constraint.ConstraintLayout>
