<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.Store" />
    </data>
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家介紹"
        android:textColor="@color/tw_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        />
    <!--            有效期-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vo.name}"
                android:textSize="14sp"
                android:textColor="@color/tw_black"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vo.address}"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/dp_12"
                android:textColor="@color/tw_black"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vo.contact}"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/dp_12"
                android:textColor="@color/tw_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="vertical"
                android:id="@+id/ll_contact"
                android:gravity="center"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tw_light_grey_EDED"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_contact"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_margin="@dimen/dp_4"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_mobile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/text_look_more"
                            android:textSize="12sp"
                            android:textColor="@color/tw_grey_666"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/tw_light_grey_EDED"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_position"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_margin="@dimen/dp_4"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_position_location"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="商家地址"
                            android:textSize="12sp"
                            android:textColor="@color/tw_grey_666"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>
