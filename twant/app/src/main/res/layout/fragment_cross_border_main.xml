<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw_slight_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="212dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">
            <View
                android:id="@+id/vw_top_bg"
                android:layout_width="match_parent"
                android:layout_height="75dp">
            </View>
            <com.ftofs.twant.widget.CrossBorderDrawView
                android:id="@+id/vw_bottom_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </com.ftofs.twant.widget.CrossBorderDrawView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <com.ftofs.twant.widget.ScaledButton
                    android:id="@+id/btn_back"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="7dp"
                    android:layout_centerVertical="true"
                    app:icon_src="@drawable/ic_arrow_back_white_24dp">

                </com.ftofs.twant.widget.ScaledButton>
                <ImageView
                    android:id="@+id/btn_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_cross_border_title">
                </ImageView>

                <com.ftofs.twant.widget.ScaledButton
                    android:id="@+id/btn_search"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:icon_src="@drawable/icon_shop_goods_search">
                </com.ftofs.twant.widget.ScaledButton>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category_list"
                    android:layout_width="match_parent"
                    android:layout_height="33dp">
                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:id="@+id/ll_more_category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cross_border_category_list_mask">
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_more_cross_border_cateogyr">
                    </ImageView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="77dp">
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>
