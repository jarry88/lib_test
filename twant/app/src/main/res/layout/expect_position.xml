<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rv_expect_position_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/length_15dp"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right">
        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/tw_blue"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text="@string/text_expect_position"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/text_edit"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/tw_blue"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/icon_edit_blue"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_expect_position"
        android:layout_below="@id/rv_expect_position_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_expect_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_expect_position"/>
        <EditText
            android:id="@+id/et_receiver_expect_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:layout_centerVertical="true"
            android:layout_marginStart="109dp"
            android:layout_marginEnd="25dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:textColorHint="#BBB"
            android:scrollHorizontally="false"
            android:text=""
            android:hint="@string/hint_input_receiver_expect_position"
            android:background="@null"

            />
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_expect_position"
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_position_keyword"
        android:layout_below="@id/rv_expect_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_position_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_position_key_word"/>
        <TextView
            android:id="@+id/tv_position_keyword_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="@dimen/length_15dp"
            android:layout_marginTop="@dimen/length_15dp"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_job_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_position_keyword"
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_position_category"
        android:layout_below="@id/rv_position_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_position_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_position_category"/>
        <TextView
            android:id="@+id/tv_position_category_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="@dimen/length_15dp"
            android:layout_marginTop="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_position_category"
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_expect_salary"
        android:layout_below="@id/rv_position_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_expect_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_dark_grey"
            android:text="@string/text_expect_salary"/>
        <TextView
            android:id="@+id/tv_expect_salary_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="109dp"
            android:layout_marginBottom="@dimen/length_15dp"
            android:layout_marginTop="@dimen/length_15dp"
            android:textSize="16sp"
            android:textColor="@color/tw_black"
            android:text=""/>
        <ImageView
            android:id="@+id/exp_expection_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:src="@drawable/expand_button"/>
        <View
            android:visibility="gone"
            android:layout_below="@id/tv_expect_salary"
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:layout_marginEnd="@dimen/toolbar_margin_right"
            android:background="@color/tw_light_grey_EDED"/>
    </RelativeLayout>



</RelativeLayout>