<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="success"
            type="Boolean" />
        <variable
            name="vo"
            type="com.ftofs.lib_net.model.CouponOrderDetailInfo" />
    </data>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
        <com.ftofs.twant.login.Title
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:tt ="@{`支付結果`}"
            app:left_type="back"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/rv_list"
                tools:listitem="@layout/coupon_order_confirm_item">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:background="@color/tw_blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/coupon_pay_bg"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_28">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@{success?@drawable/icon_coupon_pay_ok:@drawable/icon_coupon_pay_no}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/tw_white"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:text="@{success?@string/success_pay_success:`支付失敗`}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="78dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/btn_goto_home"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/outline_button_down"
                        android:textSize="16sp"
                        android:textColor="@color/tw_white"
                        android:textStyle="bold"
                        android:text="回到首頁"/>
                    <TextView
                        android:id="@+id/btn_goto_order"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="@{success?View.VISIBLE:View.GONE}"
                        android:background="@drawable/outline_button_up"
                        android:textSize="16sp"
                        android:textColor="@color/tw_white"
                        android:textStyle="bold"
                        android:text="查看訂單"/>
                    <TextView
                        android:visibility="@{success?View.GONE:View.VISIBLE}"
                        android:id="@+id/btn_goto_customer"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/outline_button_up"
                        android:textSize="16sp"
                        android:textColor="@color/tw_white"
                        android:textStyle="bold"
                        android:text="聯繫客服"/>
                </LinearLayout>

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_150"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/view_bg"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"/>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        visibleOrGone="@{success}"
                        android:id="@+id/ll_container"
                        android:paddingTop="@dimen/dimen_5"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.ftofs.twant.view.CouponListItemView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:coupon_item_vo="@{vo.itemList[0].couponItemVo}"

                            android:id="@+id/list_item"/>
                        <View
                            android:layout_width="match_parent"
                            android:id="@+id/dash_line"
                            android:paddingStart="@dimen/dp_10"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_height="4dp"
                            android:background="@drawable/dash_blue_line"/>
                        <LinearLayout
                            android:padding="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ll_code_container"
                            android:orientation="vertical"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
