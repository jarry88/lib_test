<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="@dimen/length_15dp"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:lines="2"
        android:textSize="14sp"
        android:textColor="@color/tw_dark_grey"
        android:text="「健康概念」的招聘者想要與您進行溝通，是否顯示 您的基礎信息給對方。"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/length_15dp"
        android:layout_marginEnd="@dimen/length_15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/length_15dp">
        <ImageView
            android:id="@+id/img_shop_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/default_store_avatar"/>
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_toEndOf="@id/img_shop_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tw_dark_grey"
            android:text="Trevi Fashion（服裝店）"
            android:layout_marginStart="5dp"/>
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_show_contact_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:kswBackColor="@color/tw_light_grey"
            app:kswThumbColor="@color/switch_button_thumb_color"
            />
        <TextView
            android:id="@+id/tv_show"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已顯示"
            android:layout_alignParentEnd="true"
            android:textColor="@color/tw_blue"/>
    </RelativeLayout>

</LinearLayout>